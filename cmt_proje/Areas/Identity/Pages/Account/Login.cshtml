@page
@model LoginModel
@using Microsoft.AspNetCore.Identity
@using cmt_proje.Core.Entities
@using Microsoft.EntityFrameworkCore
@using cmt_proje.Infrastructure.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject ConferenceDbContext _dbContext
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
    
    // Fetch active conferences for dropdown
    var allActiveConferences = _dbContext.Conferences
        .Where(c => c.IsActive)
        .Select(c => new { c.Id, c.Acronym })
        .ToList();
}

<div class="landing-page">
    <!-- Hero Section with Navbar -->
    <div class="hero-section">
        <!-- Premium Navbar - Docshield Style -->
        <div class="hero-nav-wrapper">
            <nav class="hero-nav navbar navbar-expand-lg">
                <!-- Logo - Left -->
                <div class="hero-nav-left">
                    <a class="hero-brand" asp-controller="Home" asp-action="Index">
                        <img src="~/images/sau-logo-v2.png" alt="SAU Logo" class="hero-logo-img" />
                    </a>
                </div>

                <!-- Mobile Toggler -->
                <button class="navbar-toggler hero-navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#heroNavbar" aria-controls="heroNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Center Menu & Right Actions -->
                <div class="collapse navbar-collapse hero-nav-content" id="heroNavbar">
                    <!-- Menu Links - Center -->
                    <nav class="hero-nav-center">
                        <ul class="hero-nav-links">
                            <!-- Conference Dropdown -->
                            @if (allActiveConferences.Any())
                            {
                                <li class="nav-item dropdown" id="confDropdownContainer">
                                    <a class="nav-link dropdown-toggle" href="#" id="confDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Conferences
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="confDropdown">
                                        @foreach (var conf in allActiveConferences)
                                        {
                                            string itemAcronym = conf.Acronym.Contains('-') ? conf.Acronym.Split('-')[0] : conf.Acronym;
                                            <li>
                                                <a class="dropdown-item" 
                                                   asp-controller="Conferences" asp-action="Details" asp-route-id="@conf.Id">
                                                    @itemAcronym
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="About" asp-action="AboutOrganizer">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="About" asp-action="PastEvents">Past Events</a>
                            </li>
                        </ul>
                    </nav>

                    <!-- Login Button - Right -->
                    <div class="hero-nav-right">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn hero-secondary-btn me-2">
                                Profile
                            </a>
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="d-inline">
                                <button type="submit" class="btn hero-login-btn">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn hero-login-btn">
                                Login →
                            </a>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <!-- Logo Section -->
            <div class="auth-logo-section">
                <img src="~/images/sau-logo-v2.png" alt="SAU Conferences Logo" class="auth-logo" />
                <p class="auth-tagline">The Meeting Point of Scientific Advancements</p>
            </div>

            <!-- Login Form -->
            <div class="auth-form-section">
                <h2 class="auth-title">Log in</h2>
                
                <form id="account" method="post" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    
                    <!-- Email Input -->
                    <div class="auth-input-group">
                        <label asp-for="Input.Email" class="auth-label">
                            <i class="bi bi-envelope"></i>
                            Email
                        </label>
                        <input asp-for="Input.Email" class="auth-input" autocomplete="username" aria-required="true" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password Input -->
                    <div class="auth-input-group">
                        <label asp-for="Input.Password" class="auth-label">
                            <i class="bi bi-lock"></i>
                            Password
                        </label>
                        <input asp-for="Input.Password" class="auth-input" autocomplete="current-password" aria-required="true" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me & Forgot Password -->
                    <div class="auth-options">
                        <div class="auth-checkbox-group">
                            <input asp-for="Input.RememberMe" class="auth-checkbox" />
                            <label asp-for="Input.RememberMe" class="auth-checkbox-label">Remember me?</label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="auth-link">Forgot your password?</a>
                    </div>

                    <!-- Submit Button -->
                    <button id="login-submit" type="submit" class="auth-button">
                        Log in
                    </button>
                </form>

                <!-- Additional Links -->
                <div class="auth-links">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">Register as a new user</a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="auth-link">Resend email confirmation</a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


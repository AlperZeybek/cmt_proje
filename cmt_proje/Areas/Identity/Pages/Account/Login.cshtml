    <!-- Conference Dropdown Hover Script -->
    <script>
        (function() {
            // Mobil cihaz kontrolü (touch event varsa mobil)
            const isMobile = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
            
            // Sadece desktop'ta hover çalışsın
            if (!isMobile) {
                const confDropdownContainer = document.getElementById('confDropdownContainer');
                const confDropdown = document.getElementById('confDropdown');
                const confDropdownMenu = confDropdownContainer?.querySelector('.dropdown-menu');
                let dropdownInstance = null;

                // Bootstrap dropdown instance oluştur
                if (confDropdown && typeof bootstrap !== 'undefined') {
                    dropdownInstance = new bootstrap.Dropdown(confDropdown, {
                        trigger: 'manual'
                    });
                }

                if (confDropdownContainer && confDropdownMenu && dropdownInstance) {
                    let hoverTimeout = null;
                    let hideTimeout = null;

                    // Mouse enter - dropdown'ı aç
                    confDropdownContainer.addEventListener('mouseenter', function() {
                        clearTimeout(hideTimeout);
                        if (hoverTimeout) clearTimeout(hoverTimeout);
                        
                        hoverTimeout = setTimeout(function() {
                            dropdownInstance.show();
                        }, 100); // 100ms gecikme ile daha smooth
                    });

                    // Mouse leave - dropdown'ı kapat
                    confDropdownContainer.addEventListener('mouseleave', function() {
                        clearTimeout(hoverTimeout);
                        
                        hideTimeout = setTimeout(function() {
                            dropdownInstance.hide();
                        }, 200); // 200ms gecikme ile kullanıcı dropdown'a geçebilir
                    });

                    // Dropdown menü içinde de hover'ı koru
                    confDropdownMenu.addEventListener('mouseenter', function() {
                        clearTimeout(hideTimeout);
                    });

                    confDropdownMenu.addEventListener('mouseleave', function() {
                        hideTimeout = setTimeout(function() {
                            dropdownInstance.hide();
                        }, 200);
                    });
                }
            }
            // Mobilde varsayılan Bootstrap davranışı (click) çalışmaya devam eder
        })();
    </script>

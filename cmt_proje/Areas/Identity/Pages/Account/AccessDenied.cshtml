@page
@model cmt_proje.Areas.Identity.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .access-denied-wrapper {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .access-denied-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 1);
        border-radius: 32px;
        padding: 4rem 3rem;
        max-width: 600px;
        width: 100%;
        text-align: center;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
    }

    .access-denied-icon {
        font-size: 5rem;
        color: #EF4444;
        margin-bottom: 1.5rem;
        display: inline-block;
        animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
        transform: translate3d(0, 0, 0);
    }

    .access-denied-title {
        font-size: 2.25rem;
        font-weight: 800;
        color: #111827;
        margin-bottom: 1rem;
        letter-spacing: -0.02em;
    }

    .access-denied-message {
        font-size: 1.1rem;
        color: #6B7280;
        margin-bottom: 2.5rem;
        line-height: 1.6;
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: linear-gradient(135deg, #1E40AF 0%, #1E3A8A 100%);
        color: white;
        padding: 1rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(30, 64, 175, 0.3);
    }

    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(30, 64, 175, 0.4);
        color: white;
    }

    @@keyframes shake {
        10%, 90% { transform: translate3d(-1px, 0, 0); }
        20%, 80% { transform: translate3d(2px, 0, 0); }
        30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
        40%, 60% { transform: translate3d(4px, 0, 0); }
    }
</style>

<div class="access-denied-wrapper">
    <div class="access-denied-card">
        <div class="access-denied-icon">
            <i class="bi bi-shield-lock-fill"></i>
        </div>
        
        <h1 class="access-denied-title">Access Denied</h1>
        
        <p class="access-denied-message">
            You do not have permission to access the requested resource. This area is restricted to authorized personnel only.
        </p>

        <div class="d-flex justify-content-center gap-3 flex-wrap">
             <a href="javascript:history.back()" class="btn btn-outline-secondary rounded-pill px-4 py-3 fw-bold">
                <i class="bi bi-arrow-left me-2"></i> Go Back
            </a>
            @{
                var conferenceId = ViewData["ActiveConferenceId"];
                var returnUrl = Request.Query["ReturnUrl"].ToString();
                var isSubmissionsPage = !string.IsNullOrEmpty(returnUrl) && returnUrl.Contains("/Submissions", StringComparison.OrdinalIgnoreCase);
            }
            @if (conferenceId != null && isSubmissionsPage)
            {
                <a asp-controller="Submissions" asp-action="SelectConference" class="action-btn" style="background: linear-gradient(135deg, #10B981 0%, #059669 100%); box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);">
                    <i class="bi bi-file-earmark-plus"></i> Submit New Paper
                </a>
            }
            <a asp-controller="Home" asp-action="Home" class="action-btn">
                <i class="bi bi-speedometer2"></i> Return to Home
            </a>
        </div>
    </div>
</div>

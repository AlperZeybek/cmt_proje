@using Microsoft.AspNetCore.Identity
@using cmt_proje.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject cmt_proje.Infrastructure.Data.ConferenceDbContext _dbContext

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Conference Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- SAYFAYA ÖZEL CSS BURADAN GELECEK -->
    @RenderSection("Styles", required: false)
</head>
<body class="bg-light d-flex flex-column min-vh-100 @ViewData["BodyClass"]">

    <!-- Top Nav -->
    <header class="main-header">
        <nav class="navbar navbar-expand-lg navbar-dark main-navbar">
            <div class="container-fluid position-relative">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/sau-logo-v2.png" alt="SAU Logo" class="navbar-logo-img" />
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                    
                    <!-- CENTER LINKS (Absolute Center on Desktop) -->
                    <ul class="navbar-nav app-nav-links align-items-center mx-auto mb-2 mb-lg-0 d-lg-flex position-absolute top-50 start-50 translate-middle">
                        
                        <!-- 1. Active Conference Dropdown (Left of Home) -->
                        @{
                            // Support both ViewBag (MVC) and ViewData (Razor Pages)
                            var activeConfId = ViewBag.ActiveConferenceId ?? ViewData["ActiveConferenceId"];
                            var activeConfAcronym = ViewBag.ActiveConferenceAcronym ?? ViewData["ActiveConferenceAcronym"];
                            
                            // Check if we're on SelectConference page
                            bool isSelectConferencePage = ViewContext.RouteData.Values["controller"]?.ToString() == "Submissions" 
                                && ViewContext.RouteData.Values["action"]?.ToString() == "SelectConference";
                            
                            // Fetch active conferences for dropdown
                            var allActiveConferences = _dbContext.Conferences
                                .Where(c => c.IsActive)
                                .Select(c => new { c.Id, c.Acronym })
                                .ToList();
                        }
                        @if (activeConfId != null || isSelectConferencePage)
                        {
                            string displayAcronym = "Conferences";
                            if (activeConfId != null)
                            {
                                int confId = (int)activeConfId;
                                string confAcronym = activeConfAcronym as string ?? "Conference";
                                displayAcronym = confAcronym.Contains('-') ? confAcronym.Split('-')[0] : confAcronym;
                            }

                            <!-- Conference Dropdown -->
                            <li class="nav-item dropdown me-lg-3">
                                <a class="nav-link dropdown-toggle fw-bold text-primary" href="#" id="confDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @displayAcronym
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="confDropdown">
                                    @foreach (var conf in allActiveConferences)
                                    {
                                        string itemAcronym = conf.Acronym.Contains('-') ? conf.Acronym.Split('-')[0] : conf.Acronym;
                                        <li>
                                            <a class="dropdown-item @(activeConfId != null && (int)activeConfId == conf.Id ? "active" : "")" 
                                               asp-controller="Conferences" asp-action="Details" asp-route-id="@conf.Id">
                                                @itemAcronym
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }

                        <!-- 2. Global Home -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Home">
                                Home
                            </a>
                        </li>

                        <!-- Portal Sub-Links (Appears when Conference is Active or on SelectConference page) -->
                        @if (activeConfId != null || isSelectConferencePage)
                        {
                            int? portalConfId = activeConfId != null ? (int)activeConfId : null;
                            
                            <!-- My Submissions link - Show for Authors or on SelectConference page -->
                            @if ((User.IsInRole(AppRoles.Author) && !User.IsInRole(AppRoles.Chair)) || isSelectConferencePage)
                            {
                                <li class="nav-item">
                                    @if (portalConfId != null)
                                    {
                                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Submissions" && (ViewContext.RouteData.Values["action"]?.ToString() == "Index" || ViewContext.RouteData.Values["action"]?.ToString() == null) ? "active" : "")"
                                           asp-controller="Submissions" asp-action="Index" asp-route-conferenceId="@portalConfId">
                                            My Submissions
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Submissions" && (ViewContext.RouteData.Values["action"]?.ToString() == "My" || ViewContext.RouteData.Values["action"]?.ToString() == "SelectConference") ? "active" : "")"
                                           asp-controller="Submissions" asp-action="My">
                                            My Submissions
                                        </a>
                                    }
                                </li>
                            }

                            @if (portalConfId != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ScientificCommittee" ? "active" : "")"
                                       asp-controller="ScientificCommittee" asp-action="Index" asp-route-conferenceId="@portalConfId">
                                        Scientific Committee
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tracks" ? "active" : "")"
                                       asp-controller="Tracks" asp-action="Index" asp-route-conferenceId="@portalConfId">
                                        Tracks
                                    </a>
                                </li>
                            }
                        }

                         <!-- 3. Global About & Profile -->
                         <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "About" ? "active" : "")"
                               asp-controller="About" asp-action="Index" 
                               asp-route-conferenceId="@ViewBag.ActiveConferenceId">
                                About
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Identity" && ViewContext.RouteData.Values["page"]?.ToString() == "/Account/Manage/Index" ? "active" : "")"
                               asp-area="Identity" asp-page="/Account/Manage/Index"
                               asp-route-conferenceId="@ViewBag.ActiveConferenceId">
                                Profile
                            </a>
                        </li>
                        <!-- Chair Specific Links -->
                        @if (User.IsInRole(AppRoles.Chair))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminPanel" ? "active" : "")"
                                   asp-controller="AdminPanel" asp-action="Index">
                                    Admin Panel
                                </a>
                            </li>
                             <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reviews" ? "active" : "")"
                                   asp-controller="Reviews" asp-action="MyAssignments">
                                    My Reviews
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")"
                                   asp-controller="Admin" asp-action="Users">
                                    Users
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AboutAdmin" ? "active" : "")"
                                   asp-controller="AboutAdmin" asp-action="Index">
                                    Manage About
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 navbar-auth">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <div class="user-info d-flex align-items-center">
                                    <div class="user-avatar me-2">
                                        <i class="bi bi-person-circle"></i>
                                    </div>
                                    @{
                                        var currentUser = await UserManager.GetUserAsync(User);
                                        var displayName = currentUser?.FullName ?? User.Identity?.Name ?? "User";
                                    }
                                    <span class="user-greeting-text">Hello, <strong class="user-name-text">@displayName</strong></span>
                                </div>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/"
                                      method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-light logout-btn">
                                        <i class="bi bi-box-arrow-right me-1"></i>
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn navbar-login-btn" asp-area="Identity" asp-page="/Account/Login">
                                    Login &rarr;
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main class="app-main">
        <div class="container py-4 app-main-content">
            <div class="app-main-inner">
                @RenderBody()
            </div>
        </div>
    </main>

    <partial name="_Footer" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- About Dropdown Hover Script -->
    <script>
        (function() {
            // Mobil cihaz kontrolü (touch event varsa mobil)
            const isMobile = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
            
            // Sadece desktop'ta hover çalışsın
            if (!isMobile) {
                const aboutDropdownContainer = document.getElementById('aboutDropdownContainer');
                const aboutDropdown = document.getElementById('aboutDropdown');
                const aboutDropdownMenu = aboutDropdownContainer?.querySelector('.dropdown-menu');
                let dropdownInstance = null;

                // Bootstrap dropdown instance oluştur
                if (aboutDropdown && typeof bootstrap !== 'undefined') {
                    dropdownInstance = new bootstrap.Dropdown(aboutDropdown, {
                        trigger: 'manual'
                    });
                }

                if (aboutDropdownContainer && aboutDropdownMenu && dropdownInstance) {
                    let hoverTimeout = null;
                    let hideTimeout = null;

                    // Mouse enter - dropdown'ı aç
                    aboutDropdownContainer.addEventListener('mouseenter', function() {
                        clearTimeout(hideTimeout);
                        if (hoverTimeout) clearTimeout(hoverTimeout);
                        
                        hoverTimeout = setTimeout(function() {
                            dropdownInstance.show();
                        }, 100); // 100ms gecikme ile daha smooth
                    });

                    // Mouse leave - dropdown'ı kapat
                    aboutDropdownContainer.addEventListener('mouseleave', function() {
                        clearTimeout(hoverTimeout);
                        
                        hideTimeout = setTimeout(function() {
                            dropdownInstance.hide();
                        }, 200); // 200ms gecikme ile kullanıcı dropdown'a geçebilir
                    });

                    // Dropdown menü içinde de hover'ı koru
                    aboutDropdownMenu.addEventListener('mouseenter', function() {
                        clearTimeout(hideTimeout);
                    });

                    aboutDropdownMenu.addEventListener('mouseleave', function() {
                        hideTimeout = setTimeout(function() {
                            dropdownInstance.hide();
                        }, 200);
                    });
                }
            }
            // Mobilde varsayılan Bootstrap davranışı (click) çalışmaya devam eder
        })();
    </script>

    <!-- Custom CSS for Navbar Centering -->
    <style>
        @@media (min-width: 992px) {
            .app-nav-links {
                position: absolute !important;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
                width: auto !important;
                margin: 0 !important;
            }
             .navbar-collapse {
                position: static;
            }
            
            /* Hover Dropdown Logic for Desktop */
            .nav-item.dropdown:hover .dropdown-menu {
                display: block;
                animation: fadeInUp 0.2s ease-out;
            }
            
            .nav-item.dropdown .dropdown-menu {
                margin-top: 0; /* Align seamlessly */
            }
        }

        /* Premium Dropdown Styling */
        .dropdown-menu {
            border: none;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            padding: 0.5rem;
            background-color: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
        }

        .dropdown-item {
            border-radius: 8px;
            padding: 0.6rem 1rem;
            font-weight: 500;
            color: #555;
            transition: all 0.2s ease;
        }

        .dropdown-item:hover, .dropdown-item:focus {
            background-color: #f0f7ff; /* Light primary tint */
            color: #0d6efd; /* Primary color */
            transform: translateX(4px);
        }

        .dropdown-item.active, .dropdown-item:active {
            background-color: #0d6efd;
            color: white;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translate3d(0, 10px, 0);
            }
            to {
                opacity: 1;
                transform: translate3d(0, 0, 0);
            }
        }
    </style>

    @RenderSection("Scripts", required: false)
</body>
</html>

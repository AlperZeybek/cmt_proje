@using Microsoft.AspNetCore.Identity
@using cmt_proje.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Conference Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- SAYFAYA ÖZEL CSS BURADAN GELECEK -->
    @RenderSection("Styles", required: false)
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    <!-- Top Nav -->
    <header class="main-header">
        <nav class="navbar navbar-expand-lg navbar-dark main-navbar">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <span class="brand-logo me-3">
                        <i class="bi bi-journal-text"></i>
                    </span>
                    <div class="d-flex flex-column">
                        <span class="brand-title">Conference Manager</span>
                        <span class="brand-subtitle">Academic Platform</span>
                    </div>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 app-nav-links">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2 me-1"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Conferences" ? "active" : "")"
                               asp-controller="Conferences" asp-action="Index">
                                <i class="bi bi-globe2 me-1"></i>
                                Conferences
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Submissions" ? "active" : "")"
                               asp-controller="Submissions" asp-action="My">
                                <i class="bi bi-file-earmark-text me-1"></i>
                                My Submissions
                            </a>
                        </li>
                        @if (User.IsInRole(AppRoles.Chair))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reviews" ? "active" : "")"
                                   asp-controller="Reviews" asp-action="MyAssignments">
                                    <i class="bi bi-check2-square me-1"></i>
                                    My Reviews
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 navbar-auth">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <div class="user-info d-flex align-items-center">
                                    <div class="user-avatar me-2">
                                        <i class="bi bi-person-circle"></i>
                                    </div>
                                    <span class="text-white-50 small">Hello, <strong class="text-white">@User.Identity?.Name</strong></span>
                                </div>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/"
                                      method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-light logout-btn">
                                        <i class="bi bi-box-arrow-right me-1"></i>
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-light" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>
                                    Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main class="app-main">
        <div class="container py-4 app-main-content">
            <div class="app-main-inner">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="app-footer mt-auto">
        <div class="container">
            <div class="row g-4 mb-4">
                <!-- Brand Column -->
                <div class="col-lg-4 col-md-6">
                    <div class="footer-logo mb-3">
                        <i class="bi bi-journal-text"></i>
                    </div>
                    <h5 class="footer-brand-title">Conference Manager</h5>
                    <p class="footer-brand-subtitle">Academic Platform</p>
                    <p class="footer-description">
                        Streamline your academic conference management with our comprehensive platform.
                    </p>
                </div>

                <!-- Quick Links Column -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="footer-section-title">Quick Links</h6>
                    <ul class="footer-links">
                        <li>
                            <a asp-controller="Home" asp-action="Index">
                                <i class="bi bi-speedometer2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Conferences" asp-action="Index">
                                <i class="bi bi-globe2"></i>
                                Conferences
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Submissions" asp-action="My">
                                <i class="bi bi-file-earmark-text"></i>
                                My Submissions
                            </a>
                        </li>
                        @if (User.IsInRole(AppRoles.Chair))
                        {
                            <li>
                                <a asp-controller="Reviews" asp-action="MyAssignments">
                                    <i class="bi bi-check2-square"></i>
                                    My Reviews
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Resources Column -->
                <div class="col-lg-3 col-md-6">
                    <h6 class="footer-section-title">Resources</h6>
                    <ul class="footer-links">
                        <li>
                            <a href="#">
                                <i class="bi bi-book"></i>
                                Documentation
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-question-circle"></i>
                                Help Center
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-envelope"></i>
                                Contact Support
                            </a>
                        </li>
                        <li>
                            <a asp-area="Identity" asp-page="/Account/Manage/Index">
                                <i class="bi bi-person-circle"></i>
                                Account Settings
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Legal Column -->
                <div class="col-lg-3 col-md-6">
                    <h6 class="footer-section-title">Legal</h6>
                    <ul class="footer-links">
                        <li>
                            <a href="#">
                                <i class="bi bi-shield-check"></i>
                                Privacy Policy
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-file-text"></i>
                                Terms of Service
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-info-circle"></i>
                                About Us
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="footer-bottom">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        <p class="footer-copyright mb-0">
                            &copy; @DateTime.Now.Year <strong>Conference Manager</strong>. All rights reserved.
                        </p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <span class="footer-version">v1.0.0</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

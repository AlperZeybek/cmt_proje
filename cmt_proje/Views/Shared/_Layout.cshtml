@using Microsoft.AspNetCore.Identity
@using cmt_proje.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Conference Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- SAYFAYA ÖZEL CSS BURADAN GELECEK -->
    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">

    <!-- Top Nav -->
    <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(90deg,#1f2933,#3b82f6);">
            <div class="container-fluid">
                <a class="navbar-brand fw-semibold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <span class="me-2 rounded-circle bg-white bg-opacity-10 d-inline-flex align-items-center justify-content-center" style="width:32px;height:32px;">
                        <span class="fw-bold text-white">CM</span>
                    </span>
                    <span>Conference Manager</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active fw-semibold" : "")"
                               asp-controller="Home" asp-action="Index">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Conferences" ? "active fw-semibold" : "")"
                               asp-controller="Conferences" asp-action="Index">
                                Conferences
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Submissions" ? "active fw-semibold" : "")"
                               asp-controller="Submissions" asp-action="My">
                                My Submissions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reviews" ? "active fw-semibold" : "")"
                               asp-controller="Reviews" asp-action="MyAssignments">
                                My Reviews
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item me-2 d-flex align-items-center text-white-50 small">
                                <span class="me-2 bi bi-person-circle"></span>
                                Hello @User.Identity?.Name
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/"
                                      method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-light">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-sm btn-outline-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top py-3 mt-auto text-center text-muted small bg-white">
        <div class="container">
            &copy; @DateTime.Now.Year - Conference Manager
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

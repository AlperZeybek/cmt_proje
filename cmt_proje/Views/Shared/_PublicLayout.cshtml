@using Microsoft.AspNetCore.Identity
@using cmt_proje.Core.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Public Header - Only for non-home and non-login pages -->
    @if ((ViewContext.RouteData.Values["controller"]?.ToString() != "Home" || ViewContext.RouteData.Values["action"]?.ToString() != "Index") && !Context.Request.Path.Value.Contains("/Account/Login") && !Context.Request.Path.Value.Contains("/Account/Register"))
    {
        <header class="public-header">
            <nav class="navbar navbar-expand-lg">
                <div class="container">
                    <a class="navbar-brand public-brand" asp-controller="Home" asp-action="Index">
                        <img src="~/images/sau-logo-v2.png" alt="SAU Logo" class="public-logo-img" />
                        <span class="public-brand-text">SAU CONFERENCES</span>
                    </a>

                    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#publicNavbar" aria-controls="publicNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="publicNavbar">
                        <ul class="navbar-nav mx-auto public-nav-links">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="About" asp-action="AboutOrganizer">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="About" asp-action="PastEvents">Past Events</a>
                            </li>
                        </ul>
                        <div class="public-nav-actions">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn public-secondary-btn me-2">
                                    Profile
                                </a>
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="d-inline">
                                    <button type="submit" class="btn public-login-btn">Logout</button>
                                </form>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn public-login-btn">
                                    Login â†’
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <partial name="_Footer" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <style>
        /* Public Header Styles - Docshield Style */
        .public-header {
            background: transparent;
            position: sticky;
            top: 0;
            z-index: 1000;
            padding: 20px 0;
        }

        .public-header .container {
            background: transparent !important;
            border-radius: 0 !important;
            padding: 0 !important;
            margin: 0 auto !important;
            box-shadow: none !important;
            max-width: 1400px !important;
        }

        .public-header .navbar {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 14px 28px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.12);
            border: 1px solid rgba(255, 255, 255, 0.3);
            max-width: 95%;
            margin: 0 auto;
        }

        .public-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1E40AF !important;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .public-logo-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
        }

        .public-logo-img {
            height: 40px;
            width: auto;
            object-fit: contain;
        }

        .public-brand-text {
            color: #1E40AF;
            letter-spacing: 0.02em;
            font-weight: 700;
            font-size: 1.25rem;
        }

        .public-nav-links {
            gap: 32px;
            margin: 0 auto;
        }

        .public-nav-links .nav-link {
            color: #4B5563 !important;
            font-weight: 500;
            font-size: 0.9375rem;
            padding: 8px 0 !important;
            transition: color 0.2s ease;
            position: relative;
        }

        .public-nav-links .nav-link:hover {
            color: #1E40AF !important;
        }

        .public-header .navbar-toggler {
            border: none;
            padding: 4px 8px;
        }

        .public-header .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%2833, 37, 41, 0.75%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        .public-nav-actions {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .public-login-btn {
            background: #1E40AF;
            border: none;
            color: #FFFFFF;
            font-weight: 600;
            padding: 10px 24px;
            border-radius: 50px;
            transition: all 0.3s ease;
            font-size: 0.9375rem;
            white-space: nowrap;
        }

        .public-login-btn:hover {
            background: #1E3A8A;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(30, 64, 175, 0.3);
            color: #FFFFFF;
        }

        .public-secondary-btn {
            background: #60A5FA;
            border: none;
            color: #FFFFFF;
            font-weight: 600;
            padding: 10px 24px;
            border-radius: 50px;
            transition: all 0.3s ease;
            font-size: 0.9375rem;
            white-space: nowrap;
        }

        .public-secondary-btn:hover {
            background: #3B82F6;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(96, 165, 250, 0.3);
            color: #FFFFFF;
        }

        /* Site Footer Styles - Modern Dark Design */


        /* Responsive */
        @@media (max-width: 991.98px) {
            .public-header .navbar {
                border-radius: 24px;
                padding: 10px 20px;
            }

            .public-nav-links {
                gap: 24px;
                margin: 16px 0;
            }

            .public-nav-actions {
                margin-top: 12px;
                width: 100%;
                justify-content: center;
            }
        }

        @@media (max-width: 767.98px) {
            .public-header {
                padding: 12px 0;
            }

            .public-header .navbar {
                border-radius: 20px;
                padding: 8px 16px;
            }

            .public-brand {
                font-size: 1.125rem;
            }

            .public-logo-img {
                height: 32px;
            }

            .public-brand-text {
                font-size: 1rem;
            }

            .public-nav-links {
                gap: 20px;
                margin: 12px 0;
            }

            .public-nav-actions {
                margin-top: 16px;
                width: 100%;
                justify-content: center;
            }

            .public-login-btn {
                width: 100%;
                text-align: center;
            }


        }
    </style>
</body>
</html>


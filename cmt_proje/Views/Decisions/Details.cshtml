@model cmt_proje.Models.DecisionCreateViewModel
@using cmt_proje.Core.Enums

@{
    ViewData["Title"] = "Decision";
}

<h2>Decision for "@Model.SubmissionTitle"</h2>

<div class="mb-3">
    <p><strong>Conference:</strong> @Model.ConferenceName</p>
    <p><strong>Track:</strong> @Model.TrackName</p>
    <p><strong>Author:</strong> @Model.AuthorEmail</p>
        <p><strong>Presentation Type:</strong> 
            @switch (Model.PresentationType)
            {
                case PresentationType.Oral:
                    @:Oral Presentation
                    break;
                case PresentationType.Poster:
                    @:Poster Presentation
                    break;
                case PresentationType.InvitedSpeaker:
                    @:Invited Speaker
                    break;
                default:
                    @:Unknown
                    break;
            }
        </p>
    <p><strong>Submission status:</strong> @Model.SubmissionStatus</p>
</div>

@if (Model.Reviews.Any())
{
    <h4>Reviews</h4>
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Reviewer</th>
                <th>Score</th>
                <th>Confidence</th>
                <th>Submitted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Reviews)
            {
                <tr>
                    <td>@r.ReviewerEmail</td>
                    <td>@r.ScoreOverall</td>
                    <td>@r.Confidence</td>
                    <td>@r.SubmittedAt.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No reviews have been submitted yet.</p>
}

<hr />

<form asp-action="Details" method="post">
    <input type="hidden" asp-for="SubmissionId" />
    <input type="hidden" asp-for="ExistingDecisionId" />

    <div class="form-group mb-3">
        <label asp-for="DecisionStatus" class="form-label"></label>
        <select asp-for="DecisionStatus"
                class="form-control"
                asp-items="Html.GetEnumSelectList<DecisionStatus>()">
        </select>
        <span asp-validation-for="DecisionStatus" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PresentationType" class="form-label">Presentation Type</label>
        <select asp-for="PresentationType"
                class="form-control"
                asp-items="Html.GetEnumSelectList<PresentationType>()">
        </select>
        <span asp-validation-for="PresentationType" class="text-danger"></span>
        <small class="form-text text-muted">You can change the presentation type selected during submission.</small>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.ExistingDecisionId.HasValue ? "Update Decision" : "Save Decision")
    </button>

    <a asp-controller="Submissions"
       asp-action="Index"
       asp-route-conferenceId="@ViewBag.ConferenceId"
       class="btn btn-secondary ms-2">
        Back to submissions
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

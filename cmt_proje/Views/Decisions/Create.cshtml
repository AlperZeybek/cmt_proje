@model cmt_proje.Models.DecisionCreateViewModel
@using cmt_proje.Core.Enums

@{
    ViewData["Title"] = "Make Decision";
    var existingDecision = ViewBag.ExistingDecision as cmt_proje.Core.Entities.Decision;
}

<h2>Decision for "@Model.SubmissionTitle"</h2>

<div class="mb-3">
    <strong>Conference:</strong> @Model.ConferenceName <br />
    <strong>Track:</strong> @Model.TrackName
</div>

@if (existingDecision != null)
{
    <div class="alert alert-info">
        Existing decision: <strong>@existingDecision.DecisionStatus</strong>
        (last updated @existingDecision.DecidedAt.ToString("dd.MM.yyyy HH:mm"))
    </div>
}

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="SubmissionId" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="DecisionStatus" class="form-label"></label>
                <select asp-for="DecisionStatus"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<DecisionStatus>()">
                </select>
                <span asp-validation-for="DecisionStatus" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <h4>Reviews</h4>

    @if (Model.Reviews.Any())
    {
        <table class="table table-bordered table-sm">
            <thead>
                <tr>
                    <th>Reviewer</th>
                    <th>Score</th>
                    <th>Confidence</th>
                    <th>Strengths</th>
                    <th>Weaknesses</th>
                    <th>Comments to Chair</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Reviews)
                {
                    <tr>
                        <td>@r.ReviewerEmail</td>
                        <td>@r.ScoreOverall</td>
                        <td>@r.Confidence</td>
                        <td>@r.Strengths</td>
                        <td>@r.Weaknesses</td>
                        <td>@r.CommentsToChair</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            No reviews have been submitted yet for this paper.
        </div>
    }

    <button type="submit" class="btn btn-primary">Save Decision</button>
    <a asp-controller="Submissions"
       asp-action="Index"
       asp-route-conferenceId="@ViewContext.RouteData.Values["conferenceId"]"
       class="btn btn-secondary ms-2">
        Back
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

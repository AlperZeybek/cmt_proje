@model IEnumerable<cmt_proje.Core.Entities.AboutContent>

@{
    ViewData["Title"] = "Manage About Content";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="bi bi-info-circle"></i>
        Manage About Content
    </h1>
    <p class="page-subtitle">Edit content for About pages</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="modern-table">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Page Key</th>
                    <th>Title</th>
                    <th>Last Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var content in Model)
                {
                    <tr>
                        <td><code>@content.PageKey</code></td>
                        <td><strong>@content.Title</strong></td>
                        <td>@content.LastUpdated.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a asp-action="Edit" asp-route-pageKey="@content.PageKey" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil me-1"></i>
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="bi bi-inbox"></i>
        <h3>No About Content</h3>
        <p>No about content pages have been created yet.</p>
    </div>
}

@section Styles {
    <style>
        .modern-table {
            background: #e3f2fd !important;
        }
    </style>
}

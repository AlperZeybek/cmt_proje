@model cmt_proje.Core.Entities.Conference

@{
    ViewData["Title"] = "Edit Conference";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="bi bi-pencil"></i>
        Edit Conference
    </h1>
    <p class="page-subtitle">Update conference information</p>
</div>

<div class="modern-form">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedByUserId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="form-group-modern">
                <label asp-for="Name" class="form-label-modern">
                    <i class="bi bi-tag"></i>
                    Conference Name
                </label>
                <input asp-for="Name" class="form-control form-control-modern" placeholder="Enter conference name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group-modern">
                <label asp-for="Acronym" class="form-label-modern">
                    <i class="bi bi-type"></i>
                    Acronym
                </label>
                <input asp-for="Acronym" class="form-control form-control-modern" placeholder="e.g., ICML, CVPR" />
                <span asp-validation-for="Acronym" class="text-danger"></span>
            </div>

            <div class="form-group-modern">
                <label asp-for="Description" class="form-label-modern">
                    <i class="bi bi-file-text"></i>
                    Description
                </label>
                <textarea asp-for="Description" class="form-control form-control-modern" rows="4" placeholder="Enter conference description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group-modern">
                <label asp-for="LogoUrl" class="form-label-modern">
                    <i class="bi bi-image"></i>
                    Logo URL
                </label>
                <input asp-for="LogoUrl" class="form-control form-control-modern" type="text" placeholder="https://example.com/logo.png" />
                <span asp-validation-for="LogoUrl" class="text-danger"></span>
                <small class="text-muted">Enter a URL to the conference logo image</small>
                @if (!string.IsNullOrEmpty(Model.LogoUrl))
                {
                    <div class="mt-2">
                        <img src="@Model.LogoUrl" alt="Logo Preview" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" onerror="this.style.display='none'" />
                    </div>
                }
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group-modern">
                        <label asp-for="StartDate" class="form-label-modern">
                            <i class="bi bi-calendar-event"></i>
                            Start Date
                        </label>
                        <input asp-for="StartDate" type="date" class="form-control form-control-modern" id="startDate" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                        <small class="text-muted">Bugünden önce olamaz</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group-modern">
                        <label asp-for="EndDate" class="form-label-modern">
                            <i class="bi bi-calendar-check"></i>
                            End Date
                        </label>
                        <input asp-for="EndDate" type="date" class="form-control form-control-modern" id="endDate" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                        <small class="text-muted">Başlangıçtan maksimum 3 ay sonra</small>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group-modern">
                        <label asp-for="SubmissionDeadline" class="form-label-modern">
                            <i class="bi bi-clock"></i>
                            Submission Deadline
                        </label>
                        <input asp-for="SubmissionDeadline" type="date" class="form-control form-control-modern" id="submissionDeadline" />
                        <span asp-validation-for="SubmissionDeadline" class="text-danger"></span>
                        <small class="text-muted">Başlangıçtan en az 1 hafta önce</small>
                    </div>
                </div>
            </div>

            <div class="form-group-modern">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveCheck" />
                    <label class="form-check-label" for="isActiveCheck">
                        <i class="bi bi-toggle-on"></i>
                        Active Conference
                    </label>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-modern btn-modern-primary">
                    <i class="bi bi-check-circle"></i>
                    Save Changes
                </button>
                <a asp-action="Index" class="btn btn-modern btn-modern-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Back to List
                </a>
            </div>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var startDateInput = document.getElementById('startDate');
            var endDateInput = document.getElementById('endDate');
            var submissionDeadlineInput = document.getElementById('submissionDeadline');
            var today = new Date().toISOString().split('T')[0];

            // StartDate değiştiğinde
            startDateInput.addEventListener('change', function() {
                var startDate = new Date(startDateInput.value);
                
                // EndDate için maksimum tarih (3 ay sonra)
                var maxEndDate = new Date(startDate);
                maxEndDate.setMonth(maxEndDate.getMonth() + 3);
                endDateInput.max = maxEndDate.toISOString().split('T')[0];
                endDateInput.min = startDateInput.value;

                // SubmissionDeadline için maksimum tarih (1 hafta önce)
                var maxDeadline = new Date(startDate);
                maxDeadline.setDate(maxDeadline.getDate() - 7);
                submissionDeadlineInput.max = maxDeadline.toISOString().split('T')[0];
                submissionDeadlineInput.min = today;
            });

            // EndDate değiştiğinde kontrol
            endDateInput.addEventListener('change', function() {
                if (!startDateInput.value || !endDateInput.value) {
                    endDateInput.setCustomValidity('');
                    return;
                }

                var startDate = new Date(startDateInput.value + 'T00:00:00');
                var endDate = new Date(endDateInput.value + 'T00:00:00');
                var maxEndDate = new Date(startDate);
                maxEndDate.setMonth(maxEndDate.getMonth() + 3);

                if (endDate.getTime() > maxEndDate.getTime()) {
                    endDateInput.setCustomValidity('Konferans süresi maksimum 3 ay olabilir.');
                } else {
                    endDateInput.setCustomValidity('');
                }
            });

            // SubmissionDeadline değiştiğinde kontrol
            submissionDeadlineInput.addEventListener('change', function() {
                if (!startDateInput.value || !submissionDeadlineInput.value) {
                    submissionDeadlineInput.setCustomValidity('');
                    return;
                }

                var startDate = new Date(startDateInput.value + 'T00:00:00');
                var deadline = new Date(submissionDeadlineInput.value + 'T00:00:00');
                var minDeadline = new Date(startDate);
                minDeadline.setDate(minDeadline.getDate() - 7);

                if (deadline.getTime() >= startDate.getTime() || deadline.getTime() > minDeadline.getTime()) {
                    submissionDeadlineInput.setCustomValidity('Submission Deadline, konferans başlangıcından en az 1 hafta önce olmalıdır.');
                } else {
                    submissionDeadlineInput.setCustomValidity('');
                }
            });

            // Sayfa yüklendiğinde mevcut değerler için limitleri ayarla
            if (startDateInput.value) {
                startDateInput.dispatchEvent(new Event('change'));
            }
        });
    </script>
}

@model cmt_proje.Core.Entities.Conference

@{
    ViewData["Title"] = "Delete Conference";
}

<h2 class="mt-3 text-danger">Delete Conference</h2>

<hr />

<h4>Are you sure you want to delete this conference?</h4>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name (@Model.Acronym)</dd>

    <dt class="col-sm-2">Dates</dt>
    <dd class="col-sm-10">
        @Model.StartDate.ToString("dd.MM.yyyy") - @Model.EndDate.ToString("dd.MM.yyyy")
    </dd>

    <dt class="col-sm-2">Submission Deadline</dt>
    <dd class="col-sm-10">@Model.SubmissionDeadline.ToString("dd.MM.yyyy")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model IEnumerable<cmt_proje.Core.Entities.Conference>

@{
    ViewData["Title"] = "Conferences";
}

<h2 class="mt-3">Conferences</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Conference</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Acronym</th>
            <th>Dates</th>
            <th>Submission Deadline</th>
            <th>Created By</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Acronym</td>
                    <td>@item.StartDate.ToString("dd.MM.yyyy") - @item.EndDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.SubmissionDeadline.ToString("dd.MM.yyyy")</td>
                    <td>@item.CreatedByUser?.Email</td>
                    <td>
                        <a asp-controller="Tracks"
                           asp-action="Index"
                           asp-route-conferenceId="@item.Id"
                           class="btn btn-sm btn-outline-secondary">
                            Tracks
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">
                    No conferences created yet.
                </td>
            </tr>
        }
    </tbody>
</table>

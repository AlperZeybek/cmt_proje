@model IEnumerable<cmt_proje.Core.Entities.Conference>

@{
    ViewData["Title"] = "Conferences";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="bi bi-globe2"></i>
        Conferences
    </h1>
    <p class="page-subtitle">Manage academic conferences and their settings</p>
</div>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-modern btn-modern-primary">
        <i class="bi bi-plus-circle"></i>
        Create New Conference
    </a>
</div>

<div class="modern-table">
    <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th>Name</th>
                <th>Acronym</th>
                <th>Dates</th>
                <th>Submission Deadline</th>
                <th>Created By</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Name</strong></td>
                        <td><span class="badge-modern badge-modern-info">@item.Acronym</span></td>
                        <td>@item.StartDate.ToString("dd.MM.yyyy") - @item.EndDate.ToString("dd.MM.yyyy")</td>
                        <td>@item.SubmissionDeadline.ToString("dd.MM.yyyy")</td>
                        <td>@item.CreatedByUser?.Email</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge-modern badge-modern-success">
                                    <i class="bi bi-check-circle"></i>
                                    Active
                                </span>
                            }
                            else
                            {
                                <span class="badge-modern badge-modern-secondary">
                                    <i class="bi bi-x-circle"></i>
                                    Inactive
                                </span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-controller="Tracks"
                                   asp-action="Index"
                                   asp-route-conferenceId="@item.Id"
                                   class="btn btn-sm btn-outline-secondary"
                                   title="Manage Tracks">
                                    <i class="bi bi-list-task"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <h3>No Conferences</h3>
                            <p>You haven't created any conferences yet. Click the button above to create your first conference.</p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


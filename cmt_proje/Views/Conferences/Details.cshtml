@model cmt_proje.Core.Entities.Conference

@{
    ViewData["Title"] = "Conference Details";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="bi bi-globe2"></i>
        @Model.Name
    </h1>
    <p class="page-subtitle">
        <span class="badge-modern badge-modern-info">@Model.Acronym</span>
        @if (Model.IsActive)
        {
            <span class="badge-modern badge-modern-success ms-2">
                <i class="bi bi-check-circle"></i>
                Active
            </span>
        }
        else
        {
            <span class="badge-modern badge-modern-secondary ms-2">
                <i class="bi bi-x-circle"></i>
                Inactive
            </span>
        }
    </p>
</div>

    <div class="card-modern">
        <div class="card-modern-body">
            <div class="details-section">
                <h3 class="details-section-title">
                    <i class="bi bi-info-circle"></i>
                    Conference Information
                </h3>

                <div class="details-item">
                    <span class="details-label">Description</span>
                    <div class="details-value">@Model.Description</div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="details-item">
                            <span class="details-label">
                                <i class="bi bi-calendar-event"></i>
                                Start Date
                            </span>
                            <div class="details-value">@Model.StartDate.ToString("dd.MM.yyyy")</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="details-item">
                            <span class="details-label">
                                <i class="bi bi-calendar-check"></i>
                                End Date
                            </span>
                            <div class="details-value">@Model.EndDate.ToString("dd.MM.yyyy")</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="details-item">
                            <span class="details-label">
                                <i class="bi bi-clock"></i>
                                Submission Deadline
                            </span>
                            <div class="details-value">@Model.SubmissionDeadline.ToString("dd.MM.yyyy")</div>
                        </div>
                    </div>
                </div>

                <div class="details-item">
                    <span class="details-label">
                        <i class="bi bi-person"></i>
                        Created By
                    </span>
                    <div class="details-value">@Model.CreatedByUser?.Email</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-modern mt-4">
        <div class="card-modern-header">
            <i class="bi bi-gear"></i>
            Actions
        </div>
        <div class="card-modern-body">
            <div class="action-buttons">
                <a asp-controller="Tracks"
                   asp-action="Index"
                   asp-route-conferenceId="@Model.Id"
                   class="btn btn-modern btn-modern-outline">
                    <i class="bi bi-list-task"></i>
                    Manage Tracks
                </a>

                <a asp-controller="Submissions"
                   asp-action="Index"
                   asp-route-conferenceId="@Model.Id"
                   class="btn btn-modern btn-modern-outline">
                    <i class="bi bi-file-earmark-text"></i>
                    View Submissions
                </a>

                <a asp-controller="ReviewAssignments"
                   asp-action="Index"
                   asp-route-conferenceId="@Model.Id"
                   class="btn btn-modern btn-modern-outline">
                    <i class="bi bi-check2-square"></i>
                    Manage Review Assignments
                </a>

                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-modern btn-modern-outline">
                    <i class="bi bi-pencil"></i>
                    Edit Conference
                </a>
            </div>
        </div>
    </div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-modern btn-modern-secondary">
        <i class="bi bi-arrow-left"></i>
        Back to List
    </a>
</div>

@model cmt_proje.Core.Entities.ScientificCommitteeMember

@{
    ViewData["Title"] = "Delete Scientific Committee Member";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="bi bi-trash"></i>
        Delete Scientific Committee Member
    </h1>
    <p class="page-subtitle">Are you sure you want to delete this member?</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-danger">
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. The member will be permanently removed from the system.
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Full Name:</dt>
                    <dd class="col-sm-8"><strong>@Model.FullName</strong></dd>

                    <dt class="col-sm-4">Affiliation:</dt>
                    <dd class="col-sm-8">@Model.Affiliation</dd>

                    <dt class="col-sm-4">Country:</dt>
                    <dd class="col-sm-8">@Model.Country</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            Delete
                        </button>
                        <a asp-action="Admin" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-1"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


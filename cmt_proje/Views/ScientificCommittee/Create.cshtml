@model cmt_proje.Core.Entities.ScientificCommitteeMember

@{
    ViewData["Title"] = "Add Scientific Committee Member";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="bi bi-person-plus"></i>
        Add Scientific Committee Member
    </h1>
    <p class="page-subtitle">Create a new scientific committee member</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                        <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Affiliation" class="form-label">Affiliation <span class="text-danger">*</span></label>
                        <input asp-for="Affiliation" class="form-control" placeholder="University Name" />
                        <span asp-validation-for="Affiliation" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Country" class="form-label">Country <span class="text-danger">*</span></label>
                        <input asp-for="Country" class="form-control" placeholder="Turkey" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhotoUrl" class="form-label">Photo URL</label>
                        <input asp-for="PhotoUrl" class="form-control" placeholder="https://example.com/photo.jpg" />
                        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                        <small class="form-text text-muted">Enter a URL to the member's photo</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ShortBio" class="form-label">Short Bio</label>
                        <textarea asp-for="ShortBio" class="form-control" rows="3" placeholder="Brief biography..."></textarea>
                        <span asp-validation-for="ShortBio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="WebSiteUrl" class="form-label">Website URL</label>
                        <input asp-for="WebSiteUrl" class="form-control" placeholder="https://example.com" />
                        <span asp-validation-for="WebSiteUrl" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="DisplayOrder" class="form-control" type="number" value="0" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        <small class="form-text text-muted">Lower numbers appear first (0 = first)</small>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label">
                            Active (visible on public page)
                        </label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>
                            Create
                        </button>
                        <a asp-action="Admin" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-1"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@model IEnumerable<cmt_proje.Core.Entities.ScientificCommitteeMember>

@{
    ViewData["Title"] = "Manage Scientific Committee";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="bi bi-people-fill"></i>
        Manage Scientific Committee
    </h1>
    <p class="page-subtitle">Add, edit, or remove scientific committee members</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>
        Add New Member
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="modern-table">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Full Name</th>
                    <th>Affiliation</th>
                    <th>Country</th>
                    <th>Status</th>
                    <th>Order</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(member.PhotoUrl))
                            {
                                <img src="@member.PhotoUrl" alt="@member.FullName" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" />
                            }
                            else
                            {
                                <i class="bi bi-person-circle" style="font-size: 1.5rem; color: #6c757d;"></i>
                            }
                        </td>
                        <td><strong>@member.FullName</strong></td>
                        <td>@member.Affiliation</td>
                        <td>@member.Country</td>
                        <td>
                            @if (member.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>@member.DisplayOrder</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@member.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@member.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="bi bi-inbox"></i>
        <h3>No Committee Members</h3>
        <p>No scientific committee members have been added yet.</p>
        <a asp-action="Create" class="btn btn-primary mt-3">
            <i class="bi bi-plus-circle me-1"></i>
            Add First Member
        </a>
    </div>
}


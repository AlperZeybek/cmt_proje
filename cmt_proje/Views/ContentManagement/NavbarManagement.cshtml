@model List<cmt_proje.Core.Entities.NavigationItem>
@{
    ViewData["Title"] = "Navbar Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-list-ul"></i>
                Navbar Management
            </h2>
            <p class="text-muted mb-0">Manage navigation menu items. Drag to reorder.</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addNavItemModal">
                <i class="bi bi-plus-circle"></i> Add Item
            </button>
        </div>
    </div>

    <!-- Navbar Items List -->
    <div id="navItemsContainer" class="nav-items-list">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model.OrderBy(n => n.DisplayOrder))
            {
                <div class="nav-item-card card mb-3" data-item-id="@item.Id">
                    <div class="card-header d-flex justify-content-between align-items-center bg-light">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-grip-vertical text-muted me-2" style="cursor: move;"></i>
                            @if (!string.IsNullOrEmpty(item.Icon))
                            {
                                <i class="@item.Icon me-2"></i>
                            }
                            <strong>@item.Label</strong>
                        </div>
                        <div>
                            <button type="button" class="btn btn-sm btn-outline-primary edit-nav-item-btn" data-item-id="@item.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger delete-nav-item-btn" data-item-id="@item.Id">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>URL:</strong> @(item.Url ?? $"{item.Area}/{item.Controller}/{item.Action}")
                            </div>
                            <div class="col-md-6">
                                <strong>Order:</strong> @item.DisplayOrder
                                @if (item.IsDropdown)
                                {
                                    <span class="badge bg-info ms-2">Dropdown</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No navigation items yet. Click "Add Item" to get started.
            </div>
        }
    </div>
</div>

<!-- Add Nav Item Modal -->
<div class="modal fade" id="addNavItemModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Navigation Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addNavItemForm">
                    <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />
                    
                    <div class="mb-3">
                        <label class="form-label">Label <span class="text-danger">*</span></label>
                        <input type="text" name="Label" class="form-control" required placeholder="Menu Item Text" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Icon (Bootstrap Icon Class)</label>
                        <input type="text" name="Icon" class="form-control" placeholder="bi bi-house" />
                        <small class="text-muted">e.g., bi bi-house, bi bi-info-circle</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Link Type</label>
                        <select name="LinkType" id="linkTypeSelect" class="form-select">
                            <option value="url">Direct URL</option>
                            <option value="mvc">MVC Route</option>
                        </select>
                    </div>

                    <div id="urlFields">
                        <div class="mb-3">
                            <label class="form-label">URL</label>
                            <input type="url" name="Url" class="form-control" placeholder="https://example.com" />
                        </div>
                    </div>

                    <div id="mvcFields" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label">Area</label>
                            <input type="text" name="Area" class="form-control" placeholder="Identity" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Controller</label>
                            <input type="text" name="Controller" class="form-control" placeholder="Home" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Action</label>
                            <input type="text" name="Action" class="form-control" placeholder="Index" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" name="IsDropdown" id="isDropdownCheck" class="form-check-input" />
                            <label class="form-check-label" for="isDropdownCheck">Is Dropdown Menu</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveNavItemBtn">Save Item</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Nav Item Modal -->
<div class="modal fade" id="editNavItemModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Navigation Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editNavItemForm">
                    <input type="hidden" name="Id" id="editNavItemId" />
                    <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />
                    
                    <div class="mb-3">
                        <label class="form-label">Label <span class="text-danger">*</span></label>
                        <input type="text" name="Label" id="editNavItemLabel" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Icon</label>
                        <input type="text" name="Icon" id="editNavItemIcon" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">URL</label>
                        <input type="url" name="Url" id="editNavItemUrl" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Controller</label>
                        <input type="text" name="Controller" id="editNavItemController" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Action</label>
                        <input type="text" name="Action" id="editNavItemAction" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Area</label>
                        <input type="text" name="Area" id="editNavItemArea" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" name="IsDropdown" id="editIsDropdownCheck" class="form-check-input" />
                            <label class="form-check-label" for="editIsDropdownCheck">Is Dropdown Menu</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="updateNavItemBtn">Update Item</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .nav-items-list {
            min-height: 200px;
        }

        .nav-item-card {
            cursor: move;
            transition: transform 0.2s ease;
        }

        .nav-item-card:hover {
            transform: translateX(4px);
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <script>
        // Link Type Toggle
        document.getElementById('linkTypeSelect')?.addEventListener('change', function() {
            const linkType = this.value;
            document.getElementById('urlFields').style.display = linkType === 'url' ? 'block' : 'none';
            document.getElementById('mvcFields').style.display = linkType === 'mvc' ? 'block' : 'none';
        });

        // Initialize Sortable
        const navItemsContainer = document.getElementById('navItemsContainer');
        if (navItemsContainer) {
            new Sortable(navItemsContainer, {
                handle: '.bi-grip-vertical',
                animation: 150,
                onEnd: function(evt) {
                    const items = Array.from(navItemsContainer.querySelectorAll('.nav-item-card'));
                    const orders = items.map((item, index) => ({
                        Id: parseInt(item.dataset.itemId),
                        Order: index + 1
                    }));

                    fetch('@Url.Action("ReorderNavItems", "ContentManagement")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(orders)
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            location.reload();
                        }
                    });
                }
            });
        }

        // Add Nav Item
        document.getElementById('saveNavItemBtn')?.addEventListener('click', function() {
            const form = document.getElementById('addNavItemForm');
            const formData = new FormData(form);

            fetch('@Url.Action("AddNavItem", "ContentManagement")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Error adding item');
                }
            });
        });

        // Edit Nav Item
        document.querySelectorAll('.edit-nav-item-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const itemId = this.dataset.itemId;
                
                // Fetch item data
                fetch('@Url.Action("GetNavItem", "ContentManagement")?id=' + itemId)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            const item = data.item;
                            document.getElementById('editNavItemId').value = item.id;
                            document.getElementById('editNavItemLabel').value = item.label || '';
                            document.getElementById('editNavItemIcon').value = item.icon || '';
                            document.getElementById('editNavItemUrl').value = item.url || '';
                            document.getElementById('editNavItemController').value = item.controller || '';
                            document.getElementById('editNavItemAction').value = item.action || '';
                            document.getElementById('editNavItemArea').value = item.area || '';
                            document.getElementById('editIsDropdownCheck').checked = item.isDropdown || false;
                            
                            const modal = new bootstrap.Modal(document.getElementById('editNavItemModal'));
                            modal.show();
                        }
                    });
            });
        });

        // Delete Nav Item
        document.querySelectorAll('.delete-nav-item-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                if (!confirm('Are you sure you want to delete this navigation item?')) return;
                
                const itemId = this.dataset.itemId;
                const formData = new FormData();
                formData.append('id', itemId);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                fetch('@Url.Action("DeleteNavItem", "ContentManagement")', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message || 'Error deleting item');
                    }
                });
            });
        });

        // Update Nav Item
        document.getElementById('updateNavItemBtn')?.addEventListener('click', function() {
            const form = document.getElementById('editNavItemForm');
            const formData = new FormData(form);

            fetch('@Url.Action("UpdateNavItem", "ContentManagement")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Error updating item');
                }
            });
        });
    </script>
}


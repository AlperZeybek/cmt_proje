@model IEnumerable<cmt_proje.Models.ReviewAssignmentListItemViewModel>

@{
    ViewData["Title"] = "My Review Assignments";
    var totalAssignments = Model?.Count() ?? 0;
}

<div class="cm-page-wrapper">

    <!-- Üst başlık + badge -->
    <div class="cm-header-bar">
        <div>
            <div class="cm-eyebrow">REVIEWER WORKSPACE</div>
            <h1 class="cm-page-title">My Review Assignments</h1>
            <p class="cm-page-subtitle">
                These are the papers that have been assigned to you for review.
            </p>
        </div>

        <div class="cm-pill-card">
            <div class="cm-pill-label">TOTAL ASSIGNMENTS</div>
            <div class="cm-pill-value">@totalAssignments</div>
        </div>
    </div>

    <!-- Kart -->
    <div class="cm-card">
        <div class="cm-card-header">
            <div>
                <h2 class="cm-card-title">Assigned papers</h2>
                <p class="cm-card-subtitle">
                    Click “Review” to view the submission and enter your evaluation.
                </p>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="cm-empty-state">
                <div class="cm-empty-title">No assignments yet</div>
                <div class="cm-empty-subtitle">
                    When a chair assigns papers to you, they will appear here.
                </div>
            </div>
        }
        else
        {
            <div class="cm-table-wrapper">
                <table class="cm-table">
                    <thead>
                        <tr>
                            <th>Paper title</th>
                            <th>Conference / Track</th>
                            <th>Assigned</th>
                            <th>Status</th>
                            <th>Score</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var isReviewed = item.Score.HasValue;
                            <tr class="@(isReviewed ? "cm-row-reviewed" : "")">
                                <td>
                                    <div class="cm-main-text">@item.PaperTitle</div>
                                    <div class="cm-sub-text">@item.ConferenceName</div>
                                </td>
                                <td>
                                    <div class="cm-main-text">@item.TrackName</div>
                                </td>
                                <td>
                                    <div class="cm-main-text">@item.AssignedAt.ToString("dd.MM.yyyy")</div>
                                    <div class="cm-sub-text">@item.AssignedAt.ToString("HH:mm")</div>
                                </td>
                                <td>
                                    <span class="cm-status-badge @(isReviewed ? "cm-status-reviewed" : "cm-status-pending")">
                                        @(isReviewed ? "Reviewed" : "Pending")
                                    </span>
                                </td>
                                <td>
                                    @if (item.Score.HasValue)
                                    {
                                        <span class="cm-score-pill">@item.Score</span>
                                    }
                                    else
                                    {
                                        <span class="cm-score-pill cm-score-empty">–</span>
                                    }
                                </td>
                                <td class="cm-actions-cell">
                                    <a asp-controller="Reviews"
                                       asp-action="Edit"
                                       asp-route-submissionId="@item.SubmissionId"
                                       class="cm-btn cm-btn-primary">
                                        @(isReviewed ? "Edit review" : "Review")
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .cm-page-wrapper {
            max-width: 1200px;
            margin: 32px auto 64px;
            padding: 0 24px;
        }

        .cm-header-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 24px;
            margin-bottom: 24px;
        }

        .cm-eyebrow {
            font-size: 11px;
            letter-spacing: 0.12em;
            text-transform: uppercase;
            color: #6b7280;
            font-weight: 600;
            margin-bottom: 4px;
        }

        .cm-page-title {
            font-size: 26px;
            font-weight: 700;
            color: #111827;
            margin: 0;
        }

        .cm-page-subtitle {
            margin: 4px 0 0;
            font-size: 13px;
            color: #6b7280;
        }

        .cm-pill-card {
            padding: 14px 28px;
            border-radius: 999px;
            background: radial-gradient(circle at 0% 0%, #4f46e5, #312e81);
            color: #f9fafb;
            box-shadow: 0 10px 30px rgba(15, 23, 42, 0.35);
            min-width: 170px;
            text-align: center;
        }

        .cm-pill-label {
            font-size: 10px;
            letter-spacing: 0.16em;
            text-transform: uppercase;
            opacity: 0.8;
        }

        .cm-pill-value {
            margin-top: 6px;
            font-size: 24px;
            font-weight: 700;
        }

        .cm-card {
            background: #ffffff;
            border-radius: 18px;
            box-shadow: 0 22px 45px rgba(15, 23, 42, 0.08);
            padding: 20px 24px 18px;
            border: 1px solid #e5e7eb;
        }

        .cm-card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-bottom: 12px;
        }

        .cm-card-title {
            margin: 0;
            font-size: 16px;
            font-weight: 600;
            color: #111827;
        }

        .cm-card-subtitle {
            margin: 4px 0 0;
            font-size: 12px;
            color: #6b7280;
        }

        .cm-empty-state {
            padding: 36px 8px 28px;
            text-align: center;
        }

        .cm-empty-title {
            font-weight: 600;
            color: #111827;
            margin-bottom: 4px;
        }

        .cm-empty-subtitle {
            font-size: 13px;
            color: #6b7280;
        }

        .cm-table-wrapper {
            margin-top: 4px;
            overflow-x: auto;
        }

        .cm-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 13px;
        }

            .cm-table thead tr {
                border-bottom: 1px solid #e5e7eb;
            }

            .cm-table th,
            .cm-table td {
                padding: 10px 8px;
                text-align: left;
                white-space: nowrap;
            }

            .cm-table th {
                font-size: 11px;
                text-transform: uppercase;
                letter-spacing: 0.08em;
                color: #9ca3af;
                font-weight: 600;
            }

            .cm-table tbody tr + tr {
                border-top: 1px solid #f3f4f6;
            }

        .cm-row-reviewed {
            background: #f9fafb;
        }

        .cm-main-text {
            color: #111827;
            font-weight: 500;
        }

        .cm-sub-text {
            color: #9ca3af;
            font-size: 11px;
        }

        .cm-status-badge {
            padding: 2px 8px;
            border-radius: 999px;
            font-size: 11px;
            font-weight: 600;
        }

        .cm-status-pending {
            background: #fef3c7;
            color: #92400e;
        }

        .cm-status-reviewed {
            background: #dcfce7;
            color: #166534;
        }

        .cm-score-pill {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 28px;
            padding: 2px 8px;
            border-radius: 999px;
            font-size: 12px;
            font-weight: 600;
            background: #eff6ff;
            color: #1d4ed8;
        }

        .cm-score-empty {
            background: #f9fafb;
            color: #9ca3af;
        }

        .cm-actions-cell {
            text-align: right;
        }

        .cm-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 999px;
            padding: 6px 14px;
            font-size: 12px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            text-decoration: none;
        }

        .cm-btn-primary {
            background: linear-gradient(135deg, #4f46e5, #2563eb);
            color: #ffffff;
            box-shadow: 0 8px 18px rgba(37, 99, 235, 0.35);
        }

            .cm-btn-primary:hover {
                background: linear-gradient(135deg, #4338ca, #1d4ed8);
            }

        /* responsive */
        @@media (max-width: 768px) {
            .cm-header-bar {
                flex-direction: column;
                align-items: flex-start;
            }

            .cm-card {
                padding: 16px 16px 14px;
            }

            .cm-table th,
            .cm-table td {
                padding: 8px 6px;
            }
        }
    </style>
}

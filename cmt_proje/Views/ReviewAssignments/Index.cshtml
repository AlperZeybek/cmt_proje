@model IEnumerable<cmt_proje.Core.Entities.Submission>
@using cmt_proje.Core.Entities

@{
    ViewData["Title"] = "Manage Review Assignments";

    var conference = ViewBag.Conference as Conference;

    var conferenceTitle = conference?.Name ?? "Conference";
    if (!string.IsNullOrWhiteSpace(conference?.ShortName))
    {
        conferenceTitle += $" ({conference.ShortName})";
    }
}

<h2 class="mb-2">Manage Review Assignments</h2>
<p class="text-muted mb-4">
    Conference: <strong>@conferenceTitle</strong>
</p>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:35%">Paper</th>
                    <th style="width:15%">Track</th>
                    <th style="width:15%">Author</th>
                    <th style="width:15%">Submitted At</th>
                    <th style="width:20%">Assigned Reviewers</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var submission in Model)
                {
                    var reviewers = submission.ReviewAssignments?
                    .Where(ra => ra.Reviewer != null)
                    .Select(ra => ra.Reviewer.Email)
                    .ToList() ?? new List<string>();

                    <tr>
                        <!-- PAPER -->
                        <td>
                            <strong>@submission.Title</strong><br />
                            <small class="text-muted">
                                @if (!string.IsNullOrWhiteSpace(submission.Abstract) &&
                                                            submission.Abstract.Length > 140)
                                {
                                    @($"{submission.Abstract.Substring(0, 140)}…")
                                }
                                else
                                {
                                    @submission.Abstract
                                }
                            </small>
                        </td>

                        <!-- TRACK -->
                        <td>@submission.Track?.Name</td>

                        <!-- AUTHOR -->
                        <td>@submission.SubmittedByUser?.Email</td>

                        <!-- SUBMITTED AT -->
                        <td>
                            @if (submission.SubmittedAt != default(DateTime))
                            {
                                @submission.SubmittedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")

                                @* İstersen burada taslak badge'i gösterebilirsin
                                if (submission.IsDraft)
                                {
                                    <span class="badge bg-secondary ms-1">Draft</span>
                                } *@
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>

                        <!-- ASSIGNED REVIEWERS + ASSIGN BUTTON -->
                        <td>
                            <div class="d-flex flex-column gap-1">
                                @if (reviewers.Any())
                                {
                                    <span class="small text-muted">
                                        @string.Join(", ", reviewers)
                                    </span>
                                }
                                else
                                {
                                    <span class="small text-muted">No reviewers yet.</span>
                                }

                                <a asp-action="Assign"
                                   asp-route-submissionId="@submission.Id"
                                   class="btn btn-sm btn-outline-primary mt-1">
                                    Assign reviewer
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Conferences"
       asp-action="Details"
       asp-route-id="@conference?.Id"
       class="btn btn-outline-secondary">
        ← Back to Conference
    </a>
</div>

@model IEnumerable<cmt_proje.Core.Entities.Submission>

@{
    ViewData["Title"] = "My Submissions";
}

<h2 class="mt-3">My Submissions</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Conference</th>
            <th>Title</th>
            <th>Track</th>
            <th>Status</th>
            <th>Submitted At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Conference?.Name (@item.Conference?.Acronym)</td>
                    <td>@item.Title</td>
                    <td>@item.Track?.Name</td>
                    <td>@item.Status.ToString()</td>
                    <td>@item.SubmittedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Download</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">You have not submitted any papers yet.</td>
            </tr>
        }
    </tbody>
</table>

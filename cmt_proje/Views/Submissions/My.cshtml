@model IEnumerable<cmt_proje.Core.Entities.Submission>

@{
    ViewData["Title"] = "My Submissions";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1 class="page-title">
                <i class="bi bi-file-earmark-text"></i>
                My Submissions
            </h1>
            <p class="page-subtitle">View and manage your submitted papers</p>
        </div>
        <div>
            <a asp-action="SelectConference" class="btn btn-modern btn-modern-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Submission
            </a>
        </div>
    </div>
</div>

<div class="modern-table">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Submission No</th>
                    <th>Conference</th>
                    <th>Title</th>
                    <th>Track</th>
                    <th>Presentation Type</th>
                    <th>Status</th>
                    <th>Submitted At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@(item.SubmissionNumber ?? "-")</strong></td>
                            <td>
                                <strong>@item.Conference?.Name</strong><br />
                                <small class="text-muted">@item.Conference?.Acronym</small>
                            </td>
                            <td><strong>@item.Title</strong></td>
                            <td>@item.Track?.Name</td>
                            <td>@(item.PresentationType == cmt_proje.Core.Enums.PresentationType.Oral ? "Oral Presentation" : "Poster Presentation")</td>
                            <td>
                                @switch (item.Status.ToString())
                                {
                                    case "Submitted":
                                        <span class="badge-modern badge-modern-info">
                                            <i class="bi bi-send"></i>
                                            Submitted
                                        </span>
                                        break;
                                    case "UnderReview":
                                        <span class="badge-modern badge-modern-warning">
                                            <i class="bi bi-hourglass-split"></i>
                                            Under Review
                                        </span>
                                        break;
                                    case "Accepted":
                                        <span class="badge-modern badge-modern-success">
                                            <i class="bi bi-check-circle"></i>
                                            Accepted
                                        </span>
                                        break;
                                    case "Rejected":
                                        <span class="badge-modern badge-modern-danger">
                                            <i class="bi bi-x-circle"></i>
                                            Rejected
                                        </span>
                                        break;
                                    default:
                                        <span class="badge-modern badge-modern-secondary">@item.Status.ToString()</span>
                                        break;
                                }
                            </td>
                            <td>@item.SubmittedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Download PDF">
                                        <i class="bi bi-download"></i>
                                    </a>
                                    @{
                                        var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                                        var isChair = User.IsInRole(AppRoles.Chair);
                                        var canDelete = isChair || item.SubmittedByUserId == userId;
                                    }
                                    @if (canDelete)
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8">
                            <div class="empty-state">
                                <i class="bi bi-inbox"></i>
                                <h3>No Submissions</h3>
                                <p>You haven't submitted any papers yet. Browse conferences to submit your first paper.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

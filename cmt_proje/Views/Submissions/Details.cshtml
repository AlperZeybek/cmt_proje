@model cmt_proje.Core.Entities.Submission

@{
    ViewData["Title"] = "Submission Details";
}

<div class="page-header">
    <h1 class="page-title">
        <i class="bi bi-file-earmark-text"></i>
        Submission Details
    </h1>
    <p class="page-subtitle">View submission information and download the paper</p>
</div>

    <div class="card-modern">
        <div class="card-modern-body">
            <div class="details-section">
                <h3 class="details-section-title">
                    <i class="bi bi-info-circle"></i>
                    Paper Information
                </h3>

                <div class="details-item">
                    <span class="details-label">Submission No</span>
                    <div class="details-value"><strong>@(Model.SubmissionNumber ?? "-")</strong></div>
                </div>

                <div class="details-item">
                    <span class="details-label">Title</span>
                    <div class="details-value"><strong>@Model.Title</strong></div>
                </div>

                <div class="details-item">
                    <span class="details-label">Abstract</span>
                    <div class="details-value">@Model.Abstract</div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="details-item">
                            <span class="details-label">
                                <i class="bi bi-globe2"></i>
                                Conference
                            </span>
                            <div class="details-value">
                                @Model.Conference?.Name
                                <span class="badge-modern badge-modern-info ms-2">@Model.Conference?.Acronym</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="details-item">
                            <span class="details-label">
                                <i class="bi bi-list-task"></i>
                                Track
                            </span>
                            <div class="details-value">@Model.Track?.Name</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="details-item">
                            <span class="details-label">
                                <i class="bi bi-person"></i>
                                Author
                            </span>
                            <div class="details-value">@Model.SubmittedByUser?.Email</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="details-item">
                            <span class="details-label">
                                <i class="bi bi-presentation"></i>
                                Presentation Type
                            </span>
                            <div class="details-value">
                                @switch (Model.PresentationType)
                                {
                                    case cmt_proje.Core.Enums.PresentationType.Oral:
                                        @:Oral Presentation
                                        break;
                                    case cmt_proje.Core.Enums.PresentationType.Poster:
                                        @:Poster Presentation
                                        break;
                                    case cmt_proje.Core.Enums.PresentationType.InvitedSpeaker:
                                        @:Invited Speaker
                                        break;
                                    default:
                                        @:Unknown
                                        break;
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="details-item">
                            <span class="details-label">
                                <i class="bi bi-flag"></i>
                                Status
                            </span>
                            <div class="details-value">
                                @switch (Model.Status.ToString())
                                {
                                    case "Submitted":
                                        <span class="badge-modern badge-modern-info">Submitted</span>
                                        break;
                                    case "UnderReview":
                                        <span class="badge-modern badge-modern-warning">Under Review</span>
                                        break;
                                    case "Accepted":
                                        <span class="badge-modern badge-modern-success">Accepted</span>
                                        break;
                                    case "Rejected":
                                        <span class="badge-modern badge-modern-danger">Rejected</span>
                                        break;
                                    default:
                                        <span class="badge-modern badge-modern-secondary">@Model.Status.ToString()</span>
                                        break;
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="details-item">
                            <span class="details-label">
                                <i class="bi bi-calendar"></i>
                                Submitted At
                            </span>
                            <div class="details-value">@Model.SubmittedAt.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <div class="action-buttons">
            @{
                var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                var isChair = User.IsInRole(AppRoles.Chair);
                var canDownload = isChair || Model.SubmittedByUserId == userId;
                var canDelete = isChair || Model.SubmittedByUserId == userId;
            }
            @if (canDownload)
            {
                <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-modern btn-modern-outline">
                    <i class="bi bi-download"></i>
                    Download PDF
                </a>
            }
            @if (canDelete)
            {
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-modern btn-modern-outline btn-modern-danger">
                    <i class="bi bi-trash"></i>
                    Delete Submission
                </a>
            }
            @if (isChair)
            {
                <a asp-action="Index" asp-route-conferenceId="@Model.ConferenceId" class="btn btn-modern btn-modern-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Back to List
                </a>
            }
            else
            {
                <a asp-action="My" class="btn btn-modern btn-modern-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Back to My Submissions
                </a>
            }
        </div>
    </div>

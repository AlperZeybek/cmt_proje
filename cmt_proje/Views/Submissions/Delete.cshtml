@model cmt_proje.Core.Entities.Submission

@{
    ViewData["Title"] = "Delete Submission";
}

<h2 class="mt-3 text-danger">Delete Submission</h2>

<hr />

<h4>Are you sure you want to delete this submission?</h4>

<dl class="row">
    <dt class="col-sm-2">Conference</dt>
    <dd class="col-sm-10">@Model.Conference?.Name (@Model.Conference?.Acronym)</dd>

    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Track</dt>
    <dd class="col-sm-10">@Model.Track?.Name</dd>
</dl>

@{
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var isChair = User.IsInRole(AppRoles.Chair);
    var canDelete = isChair || Model.SubmittedByUserId == userId;
}

@if (!canDelete)
{
    <div class="alert alert-danger">
        <h4>Access Denied</h4>
        <p>You don't have permission to delete this submission.</p>
    </div>
    <a asp-action="My" class="btn btn-secondary">Back to My Submissions</a>
}
else
{
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @if (isChair)
        {
            <a asp-action="Index" asp-route-conferenceId="@Model.ConferenceId" class="btn btn-secondary">Cancel</a>
        }
        else
        {
            <a asp-action="My" class="btn btn-secondary">Cancel</a>
        }
    </form>
}

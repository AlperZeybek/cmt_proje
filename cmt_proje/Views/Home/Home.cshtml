@using Microsoft.EntityFrameworkCore
@using cmt_proje.Infrastructure.Data
@using cmt_proje.Core.Constants
@inject ConferenceDbContext _context

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["BodyClass"] = "dashboard-page";
    ViewBag.PageKey = "Home";
    
    // Get Hero Content
    var heroContent = await _context.HomeHeroContents
        .AsNoTracking()
        .OrderByDescending(h => h.LastUpdated)
        .FirstOrDefaultAsync();
    
    // Debug: Check if heroContent is loaded
    var heroTitle = "The Meeting Point<br />of Scientific Advancements";
    var heroSubtitle = "Explore world-class academic conferences hosted by Sakarya University.";
    
    if (heroContent != null)
    {
        if (!string.IsNullOrWhiteSpace(heroContent.HeroTitle))
        {
            heroTitle = heroContent.HeroTitle;
        }
        if (!string.IsNullOrWhiteSpace(heroContent.HeroSubtitle))
        {
            heroSubtitle = heroContent.HeroSubtitle;
        }
    }
    
    // Get PageContentBlocks for Home page
    var homeBlocks = await _context.PageContentBlocks
        .Where(b => b.PageKey == "Home" && b.IsActive)
        .OrderBy(b => b.DisplayOrder)
        .ToListAsync();
}

@if (User.IsInRole(AppRoles.Chair) || User.IsInRole("Admin"))
{
    @* CHAIR İÇİN ARTIK AUTHOR DASHBOARD GÖSTERİLİYOR - Admin Panel ayrı sayfada *@
    @* AUTHOR DASHBOARD - PUBLIC CARD STYLE *@
    <div class="conferences-section" id="conferences">
        <div class="container">
            <div class="dashboard-header mb-5">
                 <h1 class="dashboard-main-title text-center">
                    @Html.Raw(heroTitle)
                </h1>
                <div class="dashboard-subtitle">
                    @Html.Raw(heroSubtitle)
                </div>
            </div>
            
            <!-- PageContentBlocks for Home page -->
            @if (homeBlocks != null && homeBlocks.Any())
            {
                <div class="home-content-blocks mb-5">
                    @foreach (var block in homeBlocks)
                    {
                        <div class="content-block @(block.CssClass ?? "")" style="margin-bottom: 2rem;">
                            @switch (block.BlockType)
                            {
                                case "Heading":
                                    <h2>@block.Title</h2>
                                    break;
                                case "Text":
                                    <div>@Html.Raw(block.Content)</div>
                                    break;
                                case "Image":
                                    @if (!string.IsNullOrEmpty(block.ImageUrl))
                                    {
                                        <img src="@block.ImageUrl" alt="@block.Title" class="img-fluid" style="max-height: 400px;" onerror="this.style.display='none'" />
                                    }
                                    break;
                                case "Button":
                                    @if (!string.IsNullOrEmpty(block.LinkUrl))
                                    {
                                        <a href="@block.LinkUrl" class="btn btn-primary">@(block.LinkText ?? "Button")</a>
                                    }
                                    break;
                                case "HTML":
                                    <div>@Html.Raw(block.Content)</div>
                                    break;
                                default:
                                    @if (!string.IsNullOrEmpty(block.Content))
                                    {
                                        <div>@Html.Raw(block.Content)</div>
                                    }
                                    break;
                            }
                        </div>
                    }
                </div>
            }
            
            <!-- Preview Block Container (for preview mode) -->
            <div id="previewBlockContainer" style="display: none; margin-bottom: 2rem;"></div>
            
            <div class="conference-cards">
                @{
                    var conferences = _context.Conferences
                        .Where(c => c.IsActive)
                        .OrderByDescending(c => c.CreatedAt)
                        .Take(3)
                        .ToList();
                        
                    var colors = new[] { "orange", "blue", "green" };
                }

                @if (conferences != null && conferences.Any())
                {
                    @for (int i = 0; i < Math.Min(conferences.Count, 3); i++)
                    {
                        var conference = conferences[i];
                        var colorClass = colors[i];
                        
                        <div class="conference-card @colorClass">
                            <div class="conference-card-inner">
                                <div class="conference-logo">
                                    @if (!string.IsNullOrEmpty(conference.LogoUrl))
                                    {
                                        <img src="@conference.LogoUrl" alt="@conference.Name Logo" class="conference-logo-img" />
                                    }
                                    else
                                    {

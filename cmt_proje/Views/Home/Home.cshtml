                align-items: center;
                justify-content: center;
                font-size: 4rem;
                transition: all 0.4s ease;
            }

            .conference-card.blue .conference-logo-placeholder { background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%); color: #FFFFFF; }
            .conference-card.orange .conference-logo-placeholder { background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%); color: #FFFFFF; }
            .conference-card.purple .conference-logo-placeholder { background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%); color: #FFFFFF; }

            .conference-card:hover .conference-logo { transform: scale(1.1) rotate(2deg); }

            .conference-name {
                font-size: 1.9375rem;
                font-weight: 700;
                color: #111827;
                margin-bottom: 12px;
                line-height: 1.3;
                letter-spacing: -0.02em;
            }

            .conference-acronym {
                font-size: 1.25rem;
                font-weight: 600;
                color: #6B7280;
                margin-bottom: 28px;
                letter-spacing: 0.02em;
            }

            .conference-info { 
                margin-bottom: 0;
                flex-grow: 1;
                min-height: 0;
            }

            .conference-date, .conference-location {
                font-size: 1.0625rem;
                color: #4B5563;
                margin-bottom: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
                letter-spacing: 0.01em;
            }

            .conference-date i, .conference-location i { color: #9CA3AF; font-size: 1.1875rem; }

            .conference-btn {
                display: inline-block;
                padding: 16px 36px;
                border-radius: 50px;
                font-weight: 600;
                font-size: 1.0625rem;
                text-decoration: none;
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);

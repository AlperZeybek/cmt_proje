@section Scripts {
    <script>
        // Preview Block Support - Show preview block if in preview mode
        (function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('preview') === 'true') {
                try {
                    const previewData = sessionStorage.getItem('previewBlockPreview');
                    if (previewData) {
                        const data = JSON.parse(previewData);
                        const container = document.getElementById('previewBlockContainer');
                        if (container) {
                            let html = '<div class="content-block preview-block" style="border: 3px dashed #0d6efd; padding: 1rem; background: rgba(13, 110, 253, 0.05); margin-bottom: 2rem;">';
                            html += '<div style="background: #0d6efd; color: white; padding: 0.5rem; margin: -1rem -1rem 1rem -1rem; font-weight: bold; text-align: center;">ÖN İZLEME MODU</div>';
                            
                            switch (data.BlockType) {
                                case 'Heading':
                                    html += '<h2>' + escapeHtml(data.Title || '') + '</h2>';
                                    break;
                                case 'Text':
                                    html += '<div>' + (data.Content || '') + '</div>';
                                    break;
                                case 'Image':
                                    if (data.ImageUrl) {
                                        html += '<img src="' + escapeHtml(data.ImageUrl) + '" alt="' + escapeHtml(data.Title || '') + '" class="img-fluid" style="max-height: 400px;" onerror="this.style.display=\'none\'" />';
                                    }
                                    break;
                                case 'Button':
                                    html += '<a href="' + escapeHtml(data.LinkUrl || '#') + '" class="btn btn-primary">' + escapeHtml(data.LinkText || 'Button') + '</a>';
                                    break;
                                case 'HTML':
                                    html += '<div>' + (data.Content || '') + '</div>';
                                    break;
                                default:
                                    html += '<div>' + (data.Content || '') + '</div>';
                                    break;
                            }
                            
                            html += '</div>';
                            container.innerHTML = html;
                            container.style.display = 'block';
                            
                            // Scroll to preview
                            container.scrollIntoView({ behavior: 'smooth', block: 'start' });
                        }
                    }
                } catch (e) {
                    console.error('Preview error:', e);
                }
            }
            
            function escapeHtml(text) {
                if (!text) return '';
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }
        })();
    </script>

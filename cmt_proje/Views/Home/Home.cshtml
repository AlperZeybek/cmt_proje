@using Microsoft.EntityFrameworkCore
@using cmt_proje.Infrastructure.Data
@using cmt_proje.Core.Constants
@inject ConferenceDbContext _context

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["BodyClass"] = "dashboard-page";
}

@if (User.IsInRole(AppRoles.Chair) || User.IsInRole("Admin"))
{
    @* CHAIR İÇİN ARTIK AUTHOR DASHBOARD GÖSTERİLİYOR - Admin Panel ayrı sayfada *@
    @* AUTHOR DASHBOARD - PUBLIC CARD STYLE *@
    <div class="conferences-section" id="conferences">
        <div class="container">
            <div class="dashboard-header mb-5 text-center">
                 <h1 class="dashboard-main-title">
                    The Meeting Point of Scientific Advancements
                </h1>
                <p class="dashboard-subtitle">
                    Explore world-class academic conferences.
                </p>
            </div>
            
            <div class="conference-cards">
                @{
                    var conferences = _context.Conferences
                        .Where(c => c.IsActive)
                        .OrderByDescending(c => c.CreatedAt)
                        .Take(3)
                        .ToList();
                        
                    var colors = new[] { "orange", "blue", "green" };
                }

                @if (conferences != null && conferences.Any())
                {
                    @for (int i = 0; i < Math.Min(conferences.Count, 3); i++)
                    {
                        var conference = conferences[i];
                        var colorClass = colors[i];
                        
                        <div class="conference-card @colorClass">
                            <div class="conference-card-inner">
                                <div class="conference-logo">
                                    @if (!string.IsNullOrEmpty(conference.LogoUrl))
                                    {
                                        <img src="@conference.LogoUrl" alt="@conference.Name Logo" class="conference-logo-img" />
                                    }
                                    else
                                    {
                                        <div class="conference-logo-placeholder">
                                            <i class="bi bi-journal-text"></i>
                                        </div>
                                    }
                                </div>
                                <h3 class="conference-name">@conference.Name</h3>
                                @if (!string.IsNullOrEmpty(conference.Acronym))
                                {
                                    <p class="conference-acronym">@conference.Acronym</p>
                                }
                                <div class="conference-info">
                                    <p class="conference-date">
                                        <i class="bi bi-calendar3"></i>
                                        @conference.StartDate.ToString("dd MMM yyyy") - @conference.EndDate.ToString("dd MMM yyyy")
                                    </p>
                                    <p class="conference-location">
                                        <i class="bi bi-geo-alt"></i>
                                        Sakarya University
                                    </p>
                                </div>
                                <a href="@Url.Action("Details", "Conferences", new { id = conference.Id })" class="conference-btn">
                                    Siteye Git →
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <!-- Placeholder cards if no data -->
                    <div class="conference-card orange">
                        <div class="conference-card-inner">
                            <div class="conference-logo">
                                <div class="conference-logo-placeholder">
                                    <i class="bi bi-journal-text"></i>
                                </div>
                            </div>
                            <h3 class="conference-name">5th International Conference on Innovations in Natural Sciences and Engineering</h3>
                            <p class="conference-acronym">ICINSE2026</p>
                            <div class="conference-info">
                                <p class="conference-date">
                                        <i class="bi bi-calendar3"></i>
                                    Coming Soon
                                </p>
                                <p class="conference-location">
                                    <i class="bi bi-geo-alt"></i>
                                    Sakarya University
                                </p>
                            </div>
                            <a href="#" class="conference-btn">Siteye Git →</a>

            .conference-btn:hover { transform: translateY(-3px); box-shadow: 0 10px 28px rgba(0, 0, 0, 0.25); color: #FFFFFF; }
            .conference-card.blue .conference-btn:hover { box-shadow: 0 10px 28px rgba(59, 130, 246, 0.4); }
            .conference-card.orange .conference-btn:hover { box-shadow: 0 10px 28px rgba(245, 158, 11, 0.4); }
        </style>
}

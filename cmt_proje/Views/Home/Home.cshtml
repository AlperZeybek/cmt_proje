@section Styles {
    <style>
        /* ========================================
           DASHBOARD PAGE - HOME THEME MATCHING
           ======================================== */
        
        /* Body background - Solid Blue */
        body.dashboard-page {
            background: #4A90E2 !important;
            background-attachment: fixed !important;
            background-size: 100% 100% !important;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            overflow-x: hidden;
            min-height: 100vh;
        }

        /* Dashboard page wrapper */
        .dashboard-page {
            background: transparent !important;
            min-height: 100vh;
            padding: 0;
        }

        /* Override layout containers to be transparent */
        body:has(.dashboard-page) > .container,
        body:has(.dashboard-page) main .container,
        .dashboard-page ~ * .container,
        .dashboard-page .container {
            background: transparent !important;
            border: none !important;
            box-shadow: none !important;
            padding: 0 !important;
            max-width: 100% !important;
        }

        /* Main navbar styling - Match Home page navbar */
        body.dashboard-page .main-navbar {
            background: #B9C7DB !important;
            backdrop-filter: blur(30px);
            -webkit-backdrop-filter: blur(30px);
            border-radius: 999px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid rgba(255, 255, 255, 1);
            margin: 40px auto 0;
            max-width: calc(100% - 80px);
            padding: 0.75rem 1.5rem;
        }

        body.dashboard-page .main-header {
            background: transparent;
            box-shadow: none;
            position: relative;
        }

        /* Navbar links styling - Match Home page */
        body.dashboard-page .app-nav-links .nav-link {
            color: #4B5563;
            font-weight: 500;
            font-size: 0.9375rem;
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            transition: all 0.2s ease;
            position: relative;
        }

        body.dashboard-page .app-nav-links .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: #1E40AF;
            transition: width 0.3s ease;

@{
    ViewData["Title"] = "Conference Management Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-page">
    <div class="container py-5 dashboard-wrapper">

    <!-- Sayfa başlığı -->
    <div class="dashboard-header mb-5">
        <div class="dashboard-title-section">
            <h1 class="dashboard-main-title">
                Conference Management Panel
            </h1>
            <p class="dashboard-subtitle">
                Create conferences, collect submissions, assign reviewers and track decisions – all from a single clean interface.
            </p>
        </div>
    </div>

    <!-- Kart grid'i -->
    <div class="row g-4">

        <!-- Conferences -->
        <div class="col-xl-4 col-lg-6 col-md-6">
            <a asp-controller="Conferences" asp-action="Index" class="text-decoration-none dashboard-card-link">
                <div class="card border-0 h-100 dashboard-card-modern">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="dashboard-icon-wrapper dashboard-icon-primary">
                                <i class="bi bi-globe2"></i>
                            </div>
                        </div>
                        <h5 class="dashboard-card-title-modern mb-2">Conferences</h5>
                        <p class="dashboard-card-description">
                            Create &amp; manage academic conferences and their settings.
                        </p>
                        <div class="dashboard-card-action">
                            <span class="dashboard-card-link-text">Go to Conferences</span>
                            <i class="bi bi-arrow-right ms-1"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- My Submissions -->
        <div class="col-xl-4 col-lg-6 col-md-6">
            <a asp-controller="Submissions" asp-action="My" class="text-decoration-none dashboard-card-link">
                <div class="card border-0 h-100 dashboard-card-modern">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="dashboard-icon-wrapper dashboard-icon-info">
                                <i class="bi bi-file-earmark-text"></i>
                            </div>
                        </div>
                        <h5 class="dashboard-card-title-modern mb-2">My Submissions</h5>
                        <p class="dashboard-card-description">
                            View and manage papers you have submitted.
                        </p>
                        <div class="dashboard-card-action">
                            <span class="dashboard-card-link-text">View my papers</span>
                            <i class="bi bi-arrow-right ms-1"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Review Assignments -->
        <div class="col-xl-4 col-lg-6 col-md-6">
            <a asp-controller="ReviewAssignments" asp-action="MyAssignments" class="text-decoration-none dashboard-card-link">
                <div class="card border-0 h-100 dashboard-card-modern">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="dashboard-icon-wrapper dashboard-icon-success">
                                <i class="bi bi-check2-square"></i>
                            </div>
                        </div>
                        <h5 class="dashboard-card-title-modern mb-2">Review Assignments</h5>
                        <p class="dashboard-card-description">
                            See which papers are assigned to you and submit your reviews.
                        </p>
                        <div class="dashboard-card-action">
                            <span class="dashboard-card-link-text">Review papers</span>
                            <i class="bi bi-arrow-right ms-1"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Tracks (konferans seçerek yönet) -->
        <div class="col-xl-4 col-lg-6 col-md-6">
            <a asp-controller="Conferences" asp-action="Index" class="text-decoration-none dashboard-card-link">
                <div class="card border-0 h-100 dashboard-card-modern">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="dashboard-icon-wrapper dashboard-icon-warning">
                                <i class="bi bi-list-task"></i>
                            </div>
                        </div>
                        <h5 class="dashboard-card-title-modern mb-2">Tracks</h5>
                        <p class="dashboard-card-description">
                            Organize conference tracks. First select a conference, then manage its tracks.
                        </p>
                        <div class="dashboard-card-action">
                            <span class="dashboard-card-link-text">Manage tracks</span>
                            <i class="bi bi-arrow-right ms-1"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Decisions (konferans seçerek yönet) -->
        <div class="col-xl-4 col-lg-6 col-md-6">
            <a asp-controller="Conferences" asp-action="Index" class="text-decoration-none dashboard-card-link">
                <div class="card border-0 h-100 dashboard-card-modern">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="dashboard-icon-wrapper dashboard-icon-danger">
                                <i class="bi bi-clipboard-check"></i>
                            </div>
                        </div>
                        <h5 class="dashboard-card-title-modern mb-2">Decisions</h5>
                        <p class="dashboard-card-description">
                            Finalize accept / reject decisions based on reviews. Pick a conference first.
                        </p>
                        <div class="dashboard-card-action">
                            <span class="dashboard-card-link-text">Manage decisions</span>
                            <i class="bi bi-arrow-right ms-1"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Profile -->
        <div class="col-xl-4 col-lg-6 col-md-6">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="text-decoration-none dashboard-card-link">
                <div class="card border-0 h-100 dashboard-card-modern">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="dashboard-icon-wrapper dashboard-icon-secondary">
                                <i class="bi bi-person-circle"></i>
                            </div>
                        </div>
                        <h5 class="dashboard-card-title-modern mb-2">Profile</h5>
                        <p class="dashboard-card-description">
                            Update your personal information and account security.
                        </p>
                        <div class="dashboard-card-action">
                            <span class="dashboard-card-link-text">Edit profile</span>
                            <i class="bi bi-arrow-right ms-1"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>

    </div>
    </div>
</div>

@section Styles {
    <style>
        /* Body arka planı - açık gri */
        body {
            background: #f4f5f8 !important;
        }

        /* Dashboard page - şeffaf yap, beyaz panel olmasın */
        .dashboard-page {
            background: transparent !important;
            min-height: calc(100vh - 200px);
            padding: 0;
        }

        /* Layout'taki container'ı dashboard sayfasında şeffaf yap */
        body:has(.dashboard-page) > .container,
        body:has(.dashboard-page) main .container,
        .dashboard-page ~ * .container,
        .dashboard-page .container {
            background: transparent !important;
            border: none !important;
            box-shadow: none !important;
            padding: 0 !important;
        }

        /* Ana panel - tek büyük gri panel */
        .dashboard-wrapper {
            background: #7D8597;
            border-radius: 24px;
            padding: 32px;
            max-width: 1200px;
            margin: 40px auto;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        }

        .dashboard-header {
            margin-bottom: 3rem;
        }

        .dashboard-title-section {
            max-width: 800px;
        }

        .dashboard-main-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
            line-height: 1.2;
        }

        .dashboard-subtitle {
            font-size: 1.125rem;
            margin-bottom: 0;
            line-height: 1.6;
        }

        /* Kartlar - beyaz, border-radius: 18px */
        .dashboard-card-modern {
            background: #ffffff;
            border-radius: 18px;
            border: 1px solid rgba(0, 0, 0, 0.05);
            transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
            height: 100%;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .dashboard-card-link {
            display: block;
            height: 100%;
            text-decoration: none;
            color: inherit;
        }

        .dashboard-card-link:hover .dashboard-card-modern {
            transform: translateY(-3px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        }

        .dashboard-card-modern .card-body {
            padding: 2rem;
        }

        .dashboard-icon-wrapper {
            width: 56px;
            height: 56px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .dashboard-icon-primary {
            background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
            color: #ffffff;
        }

        .dashboard-icon-info {
            background: linear-gradient(135deg, #06B6D4 0%, #0891B2 100%);
            color: #ffffff;
        }

        .dashboard-icon-success {
            background: linear-gradient(135deg, #10B981 0%, #059669 100%);
            color: #ffffff;
        }

        .dashboard-icon-warning {
            background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
            color: #ffffff;
        }

        .dashboard-icon-danger {
            background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
            color: #ffffff;
        }

        .dashboard-icon-secondary {
            background: linear-gradient(135deg, #6B7280 0%, #4B5563 100%);
            color: #ffffff;
        }

        .dashboard-card-title-modern {
            font-size: 1.25rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.5rem;
        }

        .dashboard-card-description {
            font-size: 0.9375rem;
            color: #6B7280;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .dashboard-card-action {
            display: flex;
            align-items: center;
            color: #3B82F6;
            font-weight: 600;
            font-size: 0.9375rem;
            transition: all 0.2s ease;
        }

        .dashboard-card-link:hover .dashboard-card-action {
            color: #2563EB;
            transform: translateX(4px);
        }

        .dashboard-card-link-text {
            transition: all 0.2s ease;
        }

        /* Responsive Grid: Mobil 1, Tablet 2, Desktop 3 kolon */
        @@media (max-width: 991.98px) {
            .dashboard-wrapper {
                padding: 24px;
                margin: 20px auto;
                border-radius: 20px;
            }

            .dashboard-main-title {
                font-size: 2rem;
            }

            .dashboard-subtitle {
                font-size: 1rem;
            }

            .dashboard-card-modern .card-body {
                padding: 1.5rem;
            }
        }

        @@media (max-width: 767.98px) {
            .dashboard-wrapper {
                padding: 20px;
                margin: 16px auto;
                border-radius: 16px;
            }

            .dashboard-main-title {
                font-size: 1.75rem;
            }

            .dashboard-subtitle {
                font-size: 0.9375rem;
            }

            .dashboard-card-modern .card-body {
                padding: 1.25rem;
            }
        }
    </style>
}

@model cmt_proje.Core.Entities.Track

@{
    var conference = (cmt_proje.Core.Entities.Conference)ViewBag.Conference;
    ViewData["Title"] = "Edit Track";
}

<h2 class="mt-3">Edit Track - @conference.Name (@conference.Acronym)</h2>

<hr />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ConferenceId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Active</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-conferenceId="@conference.Id" class="btn btn-secondary">Back to Tracks</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

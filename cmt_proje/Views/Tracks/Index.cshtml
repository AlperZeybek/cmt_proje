@model IEnumerable<cmt_proje.Core.Entities.Track>

@using cmt_proje.Core.Constants

@{
    var conference = (cmt_proje.Core.Entities.Conference)ViewBag.Conference;
    ViewData["Title"] = conference.Name + " – Track Listesi";
    
    // Conference-specific body class for gradient
    string acronym = conference.Acronym?.ToUpper() ?? "";
    string bodyClass = "";
    
    if (!string.IsNullOrEmpty(acronym))
    {
        if (acronym.Contains("ICINSE"))
        {
            bodyClass = "conf-icinse";
        }
        else if (acronym.Contains("ITCHS"))
        {
            bodyClass = "conf-itchs";
        }
        else if (acronym.Contains("ITWCCST") || acronym.Contains("ITW"))
        {
            bodyClass = "conf-itwccst";
        }
    }
    
    if (!string.IsNullOrEmpty(bodyClass))
    {
        ViewData["BodyClass"] = bodyClass;
    }
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1 class="page-title">
                <i class="bi bi-list-task"></i>
                @conference.Name – Track Listesi
            </h1>
            <p class="page-subtitle">
                @if (!string.IsNullOrEmpty(conference.Acronym))
                {
                    <span class="badge-modern badge-modern-info me-2">@conference.Acronym</span>
                }
                <span>Track'leri yönetin ve submission'ları görüntüleyin</span>
            </p>
        </div>
        <div>
            @if (User.IsInRole(AppRoles.Chair))
            {
                <a asp-action="Create"
                   asp-route-conferenceId="@conference.Id"
                   class="btn btn-modern btn-modern-primary">
                    <i class="bi bi-plus-circle"></i>
                    Yeni Track Ekle
                </a>
            }
        </div>
    </div>
</div>

<div class="mb-4">
    <a asp-action="SelectConference" class="btn btn-modern btn-modern-secondary">
        <i class="bi bi-arrow-left"></i>
        Konferans Seçimine Dön
    </a>
    <a asp-controller="Conferences"
       asp-action="Details"
       asp-route-id="@conference.Id"
       class="btn btn-modern btn-modern-outline ms-2">
        <i class="bi bi-globe2"></i>
        Konferans Detayları
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="modern-table">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Track Adı</th>
                    <th>Açıklama</th>
                    <th>Track Chair</th>
                    <th>Submission Sayısı</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var submissionCount = item.Submissions?.Count ?? 0;
                    <tr>
                        <td>
                            <strong>@item.Name</strong>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <span>@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <span class="text-muted">
                                <i class="bi bi-person"></i>
                                Belirtilmemiş
                            </span>
                        </td>
                        <td>
                            <span class="badge-modern badge-modern-info">
                                <i class="bi bi-file-earmark-text"></i>
                                @submissionCount
                            </span>
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge-modern badge-modern-success">
                                    <i class="bi bi-check-circle"></i>
                                    Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge-modern badge-modern-secondary">
                                    <i class="bi bi-x-circle"></i>
                                    Pasif
                                </span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                @if (User.IsInRole(AppRoles.Chair))
                                {
                                    <a asp-action="Edit" 
                                       asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-outline-warning" 
                                       title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                        Düzenle
                                    </a>
                                    <a asp-action="Delete" 
                                       asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-outline-danger" 
                                       title="Sil">
                                        <i class="bi bi-trash"></i>
                                        Sil
                                    </a>
                                }
                                @if (submissionCount > 0)
                                {
                                    <a asp-controller="Submissions" 
                                       asp-action="Index" 
                                       asp-route-conferenceId="@conference.Id"
                                       asp-route-trackId="@item.Id"
                                       class="btn btn-sm btn-outline-info" 
                                       title="Submissions">
                                        <i class="bi bi-file-earmark-text"></i>
                                        Submissions
                                    </a>
                                }
                                else
                                {
                                    <span class="btn btn-sm btn-outline-secondary disabled" title="Henüz submission yok">
                                        <i class="bi bi-file-earmark-text"></i>
                                        Submissions
                                    </span>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="bi bi-inbox"></i>
        <h3>Track Bulunamadı</h3>
        <p>Bu konferans için henüz track tanımlanmamış. İlk track'inizi oluşturmak için yukarıdaki butonu kullanın.</p>
        @if (User.IsInRole(AppRoles.Chair))
        {
            <a asp-action="Create"
               asp-route-conferenceId="@conference.Id"
               class="btn btn-modern btn-modern-primary mt-3">
                <i class="bi bi-plus-circle"></i>
                İlk Track'i Oluştur
            </a>
        }
    </div>
}

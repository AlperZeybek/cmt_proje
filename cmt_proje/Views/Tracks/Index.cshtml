@model IEnumerable<cmt_proje.Core.Entities.Track>

@{
    var conference = (cmt_proje.Core.Entities.Conference)ViewBag.Conference;
    ViewData["Title"] = "Tracks - " + conference.Name;
}

<div class="page-header">
    <h1 class="page-title">
        <i class="bi bi-list-task"></i>
        Tracks
    </h1>
    <p class="page-subtitle">
        Manage tracks for <strong>@conference.Name</strong>
        <span class="badge-modern badge-modern-info">@conference.Acronym</span>
    </p>
</div>

    <div class="mb-4">
        <a asp-action="Create"
           asp-route-conferenceId="@conference.Id"
           class="btn btn-modern btn-modern-primary">
            <i class="bi bi-plus-circle"></i>
            Create New Track
        </a>
        <a asp-controller="Conferences"
           asp-action="Details"
           asp-route-id="@conference.Id"
           class="btn btn-modern btn-modern-secondary ms-2">
            <i class="bi bi-arrow-left"></i>
            Back to Conference
        </a>
    </div>

    <div class="modern-table">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Name</strong></td>
                            <td>@item.Description</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge-modern badge-modern-success">
                                        <i class="bi bi-check-circle"></i>
                                        Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-modern badge-modern-secondary">
                                        <i class="bi bi-x-circle"></i>
                                        Inactive
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">
                            <div class="empty-state">
                                <i class="bi bi-inbox"></i>
                                <h3>No Tracks</h3>
                                <p>No tracks defined for this conference. Create your first track to get started.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

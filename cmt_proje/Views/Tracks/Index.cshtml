@model IEnumerable<cmt_proje.Core.Entities.Track>

@{
    var conference = (cmt_proje.Core.Entities.Conference)ViewBag.Conference;
    ViewData["Title"] = "Tracks - " + conference.Name;
}

<h2 class="mt-3">Tracks for @conference.Name (@conference.Acronym)</h2>

<p>
    <a asp-action="Create"
       asp-route-conferenceId="@conference.Id"
       class="btn btn-primary">
        Create New Track
    </a>
    <a asp-controller="Conferences"
       asp-action="Details"
       asp-route-id="@conference.Id"
       class="btn btn-secondary">
        Back to Conference
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.IsActive</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">
                    No tracks defined for this conference.
                </td>
            </tr>
        }
    </tbody>
</table>
